<script src="https://cdn.rawgit.com/botmonster/jquery-bootpag/master/lib/jquery.bootpag.min.js"></script>

<script>
    $(document).ready(function () {

        //search feature delay function is writter in script.js file which is located in public/js/script.js
        $('#searchkeyword').on('input', delay(function (e) {
            let keyword = $("#searchkeyword").val()
            $.ajax({
                type: "GET",
                url: '/management/holidays/search',
                data: {
                    keyword: keyword
                },
                success: function (data) {
                    let holidayList = data.data;
                    let AjaxTable = `<table class="table custom_row" id="holidayTable">
                <thead>
                    <th>Calender Id</th>
                    <th>Calender Name</th>
                    <th>Calendar Year</th>
                    <th>Reason</th>
                    <th>Holiday Date</th>
                    <th>Campus</th>
                    <th>Organization</th>
                </thead> 
                <tbody>`;

                    if (holidayList.length > 0) {
                        for (holiday of holidayList) {
                            AjaxTable +=
                                `<tr>
                        <td>
                            ${holiday.calendar_id}
                        </td>
                        <td>
                            ${holiday.calendar_name}
                        </td>
                        <td>
                            ${holiday.calendar_year}
                        </td>
                        <td>
                            ${holiday.reason}
                        </td>
                        <td>
                            ${holiday.h_date}
                        </td>
                        <td>
                            ${holiday.campus_abbr}
                        </td>
                        <td>
                            ${holiday.org_abbr}
                        </td>
                    </tr>`
                        }
                    } else {
                        AjaxTable +=
                            ` <tr>
                                <td colspan="7">No Data Found</td>
                            </tr>`;
                    }
                    AjaxTable += `<tbody></table>`
                    $("#holidayTable").html(AjaxTable);
                }
            })
        }, 500));
    })
</script>
