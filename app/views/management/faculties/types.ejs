<%- include("../partials/head") %>
<%- include("../partials/leftSidebar") %>
<%- include("../partials/header") %>
<!--Notificaion icon-->
<!--HEADER END-->

<div class="main-content">
    <!--DASHBOARD CONTENT START-->


    <div class="card table-card">
        <div class="card-header table-card-header text-uppercase d-flex align-items-center justify-content-between">
            <div>
                <h5>FACULTY TYPES</h5>
            </div>
            <div>
                <button type="button" class="btn add-btn ms-auto" data-bs-toggle="modal"
                    data-bs-target="#add-faculty-type-modal">
                    <i class="fas fa-plus"></i></button>
                <button class="btn ms-auto select-delete-faculty-type add-btn "><i class="fas fa-trash"></i></button>
                <button class="btn ms-auto bulk-delete-faculty-type add-btn "><img src="/icons/delete.png" alt=""
                        width="26px" height="32px"></button>
            </div>
        </div>

        <div class="card-body table-responsive">
            <div class="table-searchbar-container"><button type="button"><i class="fas fa-search"></i> </button><input
                    type="search" id="searchkeyword" placeholder="Enter keywords" class="table-searchbar"></div>
            <table class="table custom_row" id="FacultyTypeTable">
                <thead>
                    <th>Sr No.</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Action</th>
                    <th>All <input type="checkbox" class="selectAll-Faculty-Types"></th>
                </thead>
                <tbody>
                    <% let count = 1%>
                    <% typeList.map(list=>{%>
                    <tr>
                        <td><%- count++ %></td>
                        <td><%- list.name %></td>
                        <td><%- list.description %></td>
                        <td>
                            <i class="fas fa-edit text-dark cursor-pointer edit-faculty-type"
                                data-faculty-type-id="<%- list.id %>"></i>
                        </td>
                        <td>
                            <input type="checkbox" data-faculty-type-id="<%- list.id %>" class="delete-faculty-type">
                        </td>
                    </tr>
                    <%})%>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--DASHBOARD CONTENT END-->



<!-- Modal -->
<div class="modal fade" id="add-faculty-type-modal" tabindex="-1" aria-labelledby="add-faculty-type-modal"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-inputform">
            <div class="modal-header modal-inputform-header">
                <h5 class="modal-title" id="add-faculty-type-title">ADD HOLIDAY TYPES</h5>
                <button type="button" class="btn fs-4 text-white" data-bs-dismiss="modal" aria-label="Close"><i
                        class="fas fa-times"></i></button>
            </div>
            <div class="modal-body">
                <div id="errorHtml"></div>
                <div class="mb-3">
                    <label for="roomName" class="form-label">Enter Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter Name">
                    <input type="hidden" id="Id">
                </div>

                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Enter Description</label>
                    <textarea class="form-control" id="description" placeholder="Enter Description"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <span class="errorMsg"></span>
                <button type="submit" class="btn  createFacultyTypes modal-inputform-btn">Create</button>
                <button type="submit" class="btn  updateFacultyTypes modal-inputform-btn d-none">Update</button>
            </div>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>
<script>
    $(document).ready(function () {

        //Create 
        $(".createFacultyTypes").on('click', function () {
            $.ajax({
                url: '/management/faculties/types',
                method: 'POST',
                type: 'JSON',
                data: {
                    name: $('#name').val(),
                    description: $('#description').val(),
                },
                success: data => {
                    if (data.status == 200) {
                        location.reload()
                    } else {
                        $(".errorMsg").html(data.message)
                    }
                },
                error: err => {
                    let errorHtml = ``;
                    if (err.responseJSON.statuscode == "422") {
                        errorHtml +=
                            `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h3>Error</h3><ul>`
                        err.responseJSON.errors.forEach(function (item) {
                            errorHtml += `<li>${item.msg}</li>`
                        })
                        errorHtml +=
                            `</ul><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
                    } else {
                        errorHtml +=
                            `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h3>Error</h3>
                    <p>Dublicate entry found!</p>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
                    }
                    $("#errorHtml").html(errorHtml)
                }
            })
        })

        //Edit
        $('#FacultyTypeTable').on('click', '.edit-faculty-type', function () {
            $(".createFacultyTypes").addClass('d-none')
            $(".updateFacultyTypes").removeClass('d-none')
            $("#add-faculty-type-title").html(`UPDATE HOLIDAY TYPES`)

            let ApiObj = {
                url: '/management/faculties/types/findOne',
                method: 'GET',
                data: {
                    Id: $(this).attr("data-faculty-type-id")
                },
                dataType: 'JSON'
            }
            ajaxApi(ApiObj).then(result => {
                let room = result.result
                console.log('room:::::::::', room)
                $('#Id').val(room.id),
                    $('#name').val(room.name),
                    $('#description').val(room.description),
                    $("#add-faculty-type-modal").modal('show')
            }).catch(error => {
                showError(error.responseJSON)
            })

        })


        //Update 
        $(".updateFacultyTypes").on('click', function () {
            $.ajax({
                url: '/management/faculties/types',
                method: 'PUT',
                type: 'JSON',
                data: {
                    id: $("#Id").val(),
                    name: $('#name').val(),
                    description: $('#description').val(),
                },
                success: data => {
                    if (data.status == 200) {
                        location.reload()
                    } else {
                        $(".errorMsg").html(data.message)
                    }

                },
                error: err => {
                    let errorHtml = ``;
                    if (err.responseJSON.statuscode == "422") {
                        errorHtml +=
                            `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h3>Error</h3><ul>`
                        err.responseJSON.errors.forEach(function (item) {
                            errorHtml += `<li>${item.msg}</li>`
                        })
                        errorHtml +=
                            `</ul><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
                    } else {
                        errorHtml +=
                            `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h3>Error</h3>
                    <p>Dublicate entry found!</p>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
                    }
                    $("#errorHtml").html(errorHtml)
                }
            })
        })




        //Select All campus
        $("#FacultyTypeTable").on('click', '.selectAll-Faculty-Types', function () {
            if (this.checked) {
                // Iterate each checkbox
                $('.delete-faculty-type:checkbox').each(function () {
                    this.checked = true;
                });
            } else {
                $('.delete-faculty-type:checkbox').each(function () {
                    this.checked = false;
                });
            }
        })


        //Delete Single and mutiple Delete
        $('.select-delete-faculty-type').on('click', function () {
            let deleteids = []
            $('.delete-faculty-type:checked').each(function () {
                let obj = {
                    id: $(this).attr("data-faculty-type-id"),
                }
                deleteids.push(obj)
            })

            if (deleteids.length > 0) {
                console.log('deleteids::::::::::::::', deleteids)
                let ApiObj = {
                    url: '/management/faculties/types',
                    type: 'DELETE',
                    data: {
                        Ids: JSON.stringify(deleteids)
                    },
                    dataType: 'JSON'
                }
                ajaxApi(ApiObj).then(result => {
                    location.reload()
                    notify();
                }).catch(error => {
                    showError(error.responseJSON)
                })

            } else {
                alert('Select Fields')
            }
        })



        //Bulk Delete
        $(".bulk-delete-faculty-type").on('click', function () {
            let ApiObj = {
                url: '/management/faculties/types',
                type: 'PATCH',
                data: {},
                dataType: 'JSON'
            }

            ajaxApi(ApiObj).then(result => {
                location.reload()
            }).catch(error => {
                showError(error.responseJSON)

            })

        })


        //search feature delay function is writter in script.js file which is located in public/js/script.js
        $('#searchkeyword').on('input', delay(function (e) {
            let keyword = $("#searchkeyword").val()
            $.ajax({
                type: "GET",
                url: '/management/faculties/types/search',
                data: {
                    keyword: keyword
                },
                success: function (data) {
                    let roomTypeStageList = data.data;

                    let AjaxTable = `<table class="table custom_row" id="FacultyTypeTable">
                    <thead>
                        <th>Sr No.</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Action</th>
                        <th>All <input type="checkbox" class="selectAll-Faculty-Types"></th>
                    </thead>
                    <tbody>`;

                    if (roomTypeStageList.length > 0) {
                        let count = 1;
                        for (list of roomTypeStageList) {
                            AjaxTable +=
                                ` <tr>
                            <td>${count++}</td>
                            <td>${list.name}</td>
                            <td>${list.description}</td>
                            <td>
                                <i class="fas fa-edit text-dark cursor-pointer edit-faculty-type"
                                    data-faculty-type-id="${list.id}"></i>
                            </td>
                            <td>
                            <input type="checkbox" data-faculty-type-id="${list.id}" class="delete-faculty-type">
                        </td>
                        </tr>`
                        }
                    } else {
                        AjaxTable +=
                            ` <tr>
                                <td colspan="5">No Data Found</td>
                            </tr>`;
                    }
                    AjaxTable += `<tbody></table>`
                    $("#FacultyTypeTable").html(AjaxTable);
                }
            })
        }, 500));

    })
</script>
<%- include("../partials/footerEnd") %>