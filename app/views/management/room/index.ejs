<script src="https://cdn.rawgit.com/botmonster/jquery-bootpag/master/lib/jquery.bootpag.min.js"></script>

<script>
    $(document).ready(function () {

        $('#searchkeyword').on('input', delay(function (e) {
            let keyword = $("#searchkeyword").val()
            $.ajax({
                type: "GET",
                url: "/management/room/search",
                data: {
                    keyword: keyword
                },
                success: function (data) {
                    console.log('roomList::::::', data)
                    let roomList = data.data;

                    let quoteAjax = `<table class="table table-bordered" id="roomTable">
                    <thead>
                                <th>Room No</th>
                                <th>Building</th>
                                <th>Type</th>
                                <th>Floor</th>
                                <th>Capacity</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Is Basement</th>
                                <th>Handled By</th>
                                <th>Campus</th>
                                <th>Is Processed</th>
                                <th>Action</th>
                    </thead>
                    <tbody>`;

                    if (roomList.length > 0) {
                        for (room of roomList) {
                            quoteAjax +=
                                ` <tr>
                                <td>${room.room_number}</td>
                                <td>${room.building_name}</td>
                                <td>${room.room_type}</td>
                                <td>${room.floor_number}</td>
                                <td>${room.capacity}</td>
                                <td>${room.start_time}</td>
                                <td>${room.end_time}</td>
                                <td>${room.is_basement}</td>
                                <td>${room.handled_by}</td>
                                <td>${room.campus}</td>
                                <td>${room.is_processed ? 'Yes' : 'No'}</td>
                               <td>
                                    <i class="fas fa-edit text-dark cursor-pointer edit-room"
                                        data-room-id="${room.id}"></i>
                                    <a data-room-id="${room.id}"
                                        class="fas fa-trash-alt text-danger delete-room"></a>
                                </td>
                            </tr>`;
                        }
                    } else {
                        quoteAjax +=
                            ` <tr>
                                <td colspan="12">No Data Found</td>
                            </tr>`;
                    }


                    quoteAjax += `<tbody></table>`
                    $("#roomTable").html(quoteAjax);
                },

            })
        }, 500));



        $('#add-room').on('click', function () {
            console.log("Room Added::::")

            let lastTr = $('#add-room-table tbody tr:last-child')
            // lastTr.find('.modalSelect2').select('destroy');


            let lastRoomType = lastTr.find(`select[name='roomType']`).val();
            let lastStartTime = lastTr.find(`select[name='startTime']`).val();
            let lastEndTime = lastTr.find(`select[name='endTime']`).val();
            let lastIsbasement = lastTr.find(`select[name='isBasement']`).val();

            let clonedTr = lastTr.clone();
            clonedTr.find(`input[name='roomNo']`).val('')
            clonedTr.find(`select[name='roomType']`).val(lastRoomType).trigger('change');
            clonedTr.find(`select[name='startTime']`).val(lastStartTime).trigger('change');
            clonedTr.find(`select[name='endTime']`).val(lastEndTime).trigger('change');
            clonedTr.find(`select[name='isBasement']`).val(lastIsbasement).trigger(
                'change');

            $('#add-room-table tbody').append(clonedTr)

            lastTr.find('.modalSelect2').select({
                dropdownParent: $('#add-room-modal')
            });

            clonedTr.find('.modalSelect2').select({
                dropdownParent: $('#add-room-modal')
            });
        })


        $('#add-room-modal').on('click', '.remove', function () {
            let trLength = $('#add-room-table tbody tr').length;

            if (trLength > 1) {
                $(this).closest('tr').remove()
            } else {
                alert('Cannot delete this room.')
            }
        })


        // Fetch Single Room
        $('#roomTable').on('click', '.edit-room', function () {
            $("#add-room-modal-title").html('Update Room')
            $("#insertRoom").addClass('d-none')
            $("#add-room").addClass('d-none')
            $(".updateRoom").removeClass('d-none')

            $.ajax({
                url: '/management/room/single',
                method: 'GET',
                type: 'JSON',
                data: {
                    id: $(this).attr('data-room-id')
                },
                success: data => {

                    let roomData = data.roomData;
                    console.log('success: ', roomData)
                    $("#roomId").val(roomData.roomid)
                    $("#update-roomNo").val(roomData.room_number)
                    $("#buildingName").val(roomData.buildingid).trigger('change'),
                        $("#campus").val(roomData.id).trigger('change'),
                        $("#roomType").val(roomData.roomtypeId)
                    $("#floorNo").val(roomData.floor_number)
                    $("#capacity").val(roomData.capacity)
                    $("#startTime").val(roomData.start_time)
                    $("#endTime").val(roomData.end_time)
                    $("#handledBy").val(roomData.orgid)
                    $("#add-room-modal").modal('show')
                },
                error: err => {
                    console.log('Error: ', err)
                }
            })
        })

        // Update Room
        $(".updateRoom").on('click', function () {
            $.ajax({
                url: '/management/room',
                method: 'PUT',
                type: 'JSON',
                data: {
                    roomid: $("#roomId").val(),
                    room_number: $('#update-roomNo').val(),
                    buildingid: $('#buildingName').val(),
                    roomtypeId: $('#roomType').val(),
                    floor_number: $('#floorNo').val(),
                    capacity: $('#capacity').val(),
                    start_time: $('#startTime').val(),
                    end_time: $('#endTime').val(),
                    is_basement: $('#isBasement').val(),
                    orgid: $("#handledBy").val()

                },
                success: data => {
                    location.reload()
                },
                error: err => {
                    console.log(err)
                    let error = err.responseJSON.errors
                    let errorHtml = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h3>Error</h3>
                    <ul>`
                    error.map(er => {
                        console.log(er.msg)
                        errorHtml +=
                            `<li>${er.msg}</li>`
                    })
                    errorHtml +=
                        `</ul> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
                    $("#errorHtml").html(errorHtml)
                }
            })
        })

        // Deleting Room
        $('#roomTable').on('click', '.delete-room', function () {
            console.log('deletehit:::::')
            $.ajax({
                url: '/management/room',
                method: 'DELETE',
                type: 'JSON',
                data: {
                    roomId: $(this).attr('data-room-id')
                },
                success: data => {
                    location.reload()
                },
                error: err => {
                    console.log('Error: ', err)
                }
            })
        })


        // INSERTING NEW ROOM DATA
        $('#insertRoom').on('click', function () {
            let roomElems = $('#add-room-table tbody tr');
            let roomCount = roomElems.length;

            // console.log('roomCount===>> ', roomCount)

            let roomJson = [];

            roomElems.each(function (index, elem) {

                $(elem).find(`input[name='roomNo']`).attr('data-room-no', $(elem).find(
                    `input[name='roomNo']`).val())


                let campusId = $(`select[name='campusId']`).val()
                let buildingId = $(`select[name='buildingId']`).val()
                let handledBy = $(`select[name='handledBy']`).val()
                let roomNo = $(elem).find(`input[name='roomNo']`).val()
                let roomType = $(elem).find(`select[name='roomType']`).val()
                let floorNo = $(elem).find(`input[name='floorNo']`).val()
                let capacity = $(elem).find(`input[name='capacity']`).val()
                let startTime = $(elem).find(`select[name='startTime']`).val()
                let endTime = $(elem).find(`select[name='endTime']`).val()
                let isBasement = $(elem).find(`select[name='isBasement']`).val()



                if (index < roomCount - 1) {
                    let obj = {
                        roomNo: roomNo,
                        roomType: roomType,
                        floorNo: floorNo,
                        capacity: capacity,
                        startTime: startTime,
                        endTime: endTime,
                        campusId: campusId,
                        buildingId: buildingId,
                        handledBy: handledBy,
                        isBasement: isBasement
                    }
                    roomJson.push(obj)

                } else {
                    let obj = {
                        roomNo: roomNo,
                        roomType: roomType,
                        floorNo: floorNo,
                        capacity: capacity,
                        startTime: startTime,
                        endTime: endTime,
                        campusId: campusId,
                        buildingId: buildingId,
                        handledBy: handledBy,
                        isBasement: isBasement
                    }
                    roomJson.push(obj)


                }
            })

            console.log('roomJson:::::::::>>', roomJson)
            // console.log('roomJsonStr::', JSON.parse(roomJson))
            roomJson = JSON.stringify(roomJson);
            console.log('roomJson:::::::::>>', roomJson)


           //console.log('Hello',isEmpty(roomJson))
      
            $.ajax({
                url: '/management/room',
                method: 'POST',
                dataType: 'JSON',
                data: {
                   // roomJson: JSON.stringify(roomJson)
                   roomJson: roomJson
                },
                //data:roomJson,
                success: (data) => {
                    console.log('Data:::::::>>', data)
                    if (data.status == "200") {
                        location.reload()
                    } else if (data.status == "400") {
                        let errorHtml =
                            `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h3>Error</h3>
                    <ul><li>${data.message}</li></ul> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
                        $("#errorHtml").html(errorHtml)
                    }

                },
                error: err => {
                    console.log('err:::::::>>', err)
                    // let error = err.responseJSON.errors
                    // console.log(error)

                    // let errorHtml = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    // <h3>Error</h3>
                    // <ul><li>No fields can be empty.</li>`
                    // // error.map(er => {
                    // //     console.log(er.msg)
                    // //     errorHtml +=
                    // //         `<li>${er.msg}</li>`
                    // // })

                    // errorHtml +=
                    //     `</ul> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
                    // $("#errorHtml").html(errorHtml)
                }
            })
        })
    })
</script>
