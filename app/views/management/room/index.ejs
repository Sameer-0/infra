    <div class="card table-card">
        <div class="card-header table-card-header text-uppercase d-flex align-items-center">
            <h5>ROOM DATA</h5>
            <button class="btn add-btn ms-auto" data-bs-toggle="modal" data-bs-target="#add-room-modal"><i
                    class="fas fa-plus"></i></button>
        </div>
        <div class="card-body table-responsive">
            <div class="table-searchbar-container"><button type="button"><i class="fas fa-search"></i>
                </button><input type="search" id="searchkeyword" placeholder="Enter keywords" class="table-searchbar">
            </div>

            <table class="table custom_row" id="roomTable">
                <thead>
                    <th>Room No</th>
                    <th>Building</th>
                    <th>Type</th>
                    <th>Floor</th>
                    <th>Capacity</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Is Basement</th>
                    <th>Handled By</th>
                    <!-- <th>Campus</th> -->
                    <th>Is Processed</th>
                    <th>Action</th>
                </thead>
                <tbody>
                    <% for (let room of roomList) { %>
                    <tr>
                        <td><%- room.room_number %></td>
                        <td><%- room.building_name %></td>
                        <td><%- room.room_type %></td>
                        <td><%- room.floor_number %></td>
                        <td><%- room.capacity %></td>
                        <td><%- room.start_time %></td>
                        <td><%- room.end_time %></td>
                        <td><%- room.is_basement ? 'Yes' : 'No' %></td>
                        <td><%- room.handled_by %></td>
                        <!-- <td><%- room.campus %></td> -->
                        <td><%- room.is_processed ? 'Yes' : 'No' %></td>
                        <td>
                            <i class="fas fa-edit text-dark cursor-pointer edit-room"
                                data-room-id="<%- room.roomid %>"></i>
                            <a data-room-id="<%- room.roomid %>" class="fas fa-trash-alt text-danger delete-room"></a>
                        </td>
                    </tr>

                    <% } %>
                </tbody>
            </table>

        </div>
    </div>
</div>

<!-- ADD NEW ROOM MODAL-->

<div class="modal fade" id="add-room-modal" aria-labelledby="add-room-modal" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content modal-inputform">
            <div class="modal-header modal-inputform-header">
                <h5 class="modal-title" id="add-room-modal-title">Add New Room</h5>
                <button type="button" class="btn fs-4 text-white" data-bs-dismiss="modal" aria-label="Close"><i
                        class="fas fa-times"></i></button>
            </div>
            <div class="modal-body">
                <div id="errorHtml"></div>
                <input type="hidden" id="roomId" name="roomId">


                <div class="row mt-4 ">
                    <div class="col-md-4">
                        <label>Campus</label>
                        <select class="form-select modalSelect2" name="campusId" id="campus" required>
                            <option disabled selected value>--Select Campus--</option>
                            <% for(let campus of campusList) { %>
                            <option value="<%- campus.id %>">
                                <%- campus.campus_abbr %>
                            </option>
                            <% } %>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label>Building</label>
                        <select class="form-select modalSelect2" name="buildingId" id="buildingName" required>
                            <option disabled selected value>--Select Building--</option>
                            <% for(let building of buildingList) { %>
                            <option value="<%- building.building_id %>">
                                <%- building.building_name %>
                            </option>
                            <% } %>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label>Handled By</label>
                        <select class="form-select modalSelect2" name="handledBy" id="handledBy" required>
                            <option disabled selected value>--Select Organization--</option>
                            <% for(let org of orgList) { %>
                            <option value="<%- org.id %>">
                                <%- org.org_abbr %>/<%- org.org_id %>
                            </option>
                            <% } %>
                        </select>
                    </div>
                </div>

                <hr class="mb-5" />

                <div class="error">

                </div>

                <div class="table-responsive">
                    <table class="table table-bordered" id="add-room-table">
                        <thead>
                            <th>Room No</th>
                            <th>Room Type</th>
                            <th>Floor</th>
                            <th>Capacity</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Is Basement</th>
                            <th>Action</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <input type="text" name="roomNo" id="update-roomNo" class="form-control" required>
                                </td>
                                <td>
                                    <select class="form-select modalSelect2" name="roomType" id="roomType" required>
                                        <option disabled selected value>--Room Type--</option>
                                        <% for(let roomType of roomTypeList) { %>
                                        <option value="<%- roomType.roomtypeid %>">
                                            <%- roomType.name %>
                                        </option>
                                        <% } %>
                                    </select>
                                </td>
                                <td>
                                    <input type="number" name="floorNo" id="floorNo" class="form-control"
                                        style="width: 70px;" required>
                                </td>
                                <td>
                                    <input type="number" name="capacity" id="capacity" class="form-control"
                                        style="width: 70px;" required>
                                </td>
                                <td>
                                    <select class="form-select modalSelect2" name="startTime" id="startTime" required>
                                        <option disabled selected value>--Start Time--</option>
                                        <% for(let time of timeList) { %>
                                        <option value="<%- time.id %>">
                                            <%- time.start_time %>
                                        </option>
                                        <% } %>
                                    </select>
                                </td>
                                <td>
                                    <select class="form-select modalSelect2" name="endTime" id="endTime" required>
                                        <option disabled selected value>--End Time--</option>
                                        <% for(let time of timeList) { %>
                                        <option value="<%- time.id %>">
                                            <%- time.end_time %>
                                        </option>
                                        <% } %>
                                    </select>
                                </td>
                                <td>
                                    <select class="form-select modalSelect2" name="isBasement" id="isBasement"
                                        style="width: 70px;" required>
                                        <option selected value="0">No</option>
                                        <option value="1">Yes</option>
                                    </select>
                                </td>
                                <td>

                                    <i class="far fa-edit d-none"></i>
                                    <i class="fas fa-trash-alt text-danger cursor-pointer remove"></i>

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button> -->
                <button type="button" class="btn btn-success  btn-sm" id="add-room"><i class="fas fa-plus"></i> Add
                    More Room</button>
                <button type="button" class="btn  modal-inputform-btn" id="insertRoom">Submit</button>
                <button type="button" class="btn  modal-inputform-btn updateRoom d-none">Update Room Data</button>
            </div>




        </div>
    </div>
</div>





