<%- include("../partials/head") %>
<%- include("../partials/leftSidebar") %>
<%- include("../partials/header") %>
<!--Notificaion icon-->
<!--HEADER END-->

<div class="main-content">
    <!--DASHBOARD CONTENT START-->
    <div class="row gy-3 gx-3 mb-3 row2-data">
        <div class="col-xl-6 col-md-10">
            <div class="card  row2-data-card">
                <div class="card-body">
                    <h6>Total Room Occupied</h6>
                    <div id="chart1"></div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4">
            <div class="card row2-data-card">
                <div class="card-body">
                    <h6>Total Room</h6>
                    <div id="chart1"></div>
                    <h1>100 </h1>
                    <div id="count">Room Count</div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4">
            <div class="card row2-data-card">
                <div class="card-body">
                    <h6>Total Room Occupied</h6>
                    <div id="chart1"></div>
                    <h1>60</h1>
                    <div id="count">Lectures Count</div>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-4">
            <div class="card row2-data-card">
                <div class="card-body">
                    <h6>Room Available for booking</h6>
                    <div id="chart1"></div>
                    <h1>40 </h1>
                    <div id="count">Task Count</div>
                </div>
            </div>
        </div>
    </div>

    <div class="card table-card">
        <div class="card-header table-card-header text-uppercase d-flex align-items-center justify-content-between">
            <div>
                <h5>ROOM DATA</h5>
            </div>
            <div>
                <button class="btn add-btn ms-auto" data-bs-toggle="modal" data-bs-target="#add-room-modal"><i
                        class="fas fa-plus"></i></button>
                <button class="btn ms-auto delete-rooms add-btn "><i class="fas fa-trash"></i></button>
                <button class="btn ms-auto bulk-delete-rooms add-btn "><img src="/icons/delete.png" alt="" width="26px"
                        height="32px"></button>
            </div>
        </div>
        <div class="card-body table-responsive">
            <div class="table-searchbar-container"><button type="button"><i class="fas fa-search"></i>
                </button><input type="search" id="searchkeyword" placeholder="Enter keywords" class="table-searchbar">
            </div>

            <table class="table custom_row" id="roomTable">
                <thead>
                    <th>Room No</th>
                    <th>Building</th>
                    <th>Type</th>
                    <th>Floor</th>
                    <th>Capacity</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Is Basement</th>
                    <th>Handled By</th>
                    <!-- <th>Campus</th> -->
                    <th>Is Processed</th>
                    <th>Action</th>
                </thead>
                <tbody>
                    <% for (let room of roomList) { %>
                    <tr>
                        <td><%- room.room_number %></td>
                        <td><%- room.building_name %></td>
                        <td><%- room.room_type %></td>
                        <td><%- room.floor_number %></td>
                        <td><%- room.capacity %></td>
                        <td><%- room.start_time %></td>
                        <td><%- room.end_time %></td>
                        <td><%- room.is_basement ? 'Yes' : 'No' %></td>
                        <td><%- room.handled_by %></td>
                        <!-- <td><%- room.campus %></td> -->
                        <td><%- room.is_processed ? 'Yes' : 'No' %></td>
                        <td>
                            <i class="fas fa-edit text-dark cursor-pointer edit-room"
                                data-room-id="<%- room.roomid %>"></i>
                            <a data-room-id="<%- room.roomid %>" class="fas fa-trash-alt text-danger delete-room"></a>
                        </td>
                    </tr>

                    <% } %>
                </tbody>
            </table>

        </div>
    </div>
</div>

<!-- ADD NEW ROOM MODAL-->

<div class="modal fade" id="add-room-modal" aria-labelledby="add-room-modal" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content modal-inputform">
            <div class="modal-header modal-inputform-header">
                <h5 class="modal-title" id="add-room-modal-title">Add New Room</h5>
                <button type="button" class="btn fs-4 text-white" data-bs-dismiss="modal" aria-label="Close"><i
                        class="fas fa-times"></i></button>
            </div>
            <div class="modal-body">
                <div id="errorHtml"></div>
                <input type="hidden" id="roomId" name="roomId">


                <div class="row mt-4 ">
                    <div class="col-md-6">
                        <label>Building</label>
                        <select class="form-select" name="building_lid" id="building_lid">
                            <option disabled selected value="">--Select Building--</option>
                            <% for(let building of buildingList) { %>
                            <option value="<%- building.building_id %>">
                                <%- building.building_name %>
                            </option>
                            <% } %>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label>Handled By</label>
                        <select class="form-select modalSelect2" name="handled_by" id="handled_by" required>
                            <option disabled selected value>--Select Organization--</option>
                            <% for(let org of orgList) { %>
                            <option value="<%- org.id %>">
                                <%- org.org_abbr %>/<%- org.org_id %>
                            </option>
                            <% } %>
                        </select>
                    </div>
                </div>

                <hr class="mb-5" />

                <div class="error">

                </div>

                <div class="table-responsive">
                    <table class="table table-bordered " id="add-room-table">
                        <thead>
                            <th>Room No</th>
                            <th>Room Type</th>
                            <th>Floor</th>
                            <th>Capacity</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Is Basement</th>
                            <th>Is Processed</th>
                            <th>Action</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <input type="text" name="roomNo" id="update-roomNo" class="form-control"
                                        palceholder="Enter Room no." required>
                                </td>
                                <td>
                                    <select class="form-select modalSelect2" name="room_type_id" id="room_type_id">
                                        <option disabled selected value="">--Room Type--</option>
                                        <% for(let roomType of roomTypeList) { %>
                                        <option value="<%- roomType.roomtypeid %>">
                                            <%- roomType.name %>
                                        </option>
                                        <% } %>
                                    </select>
                                </td>
                                <td>
                                    <input type="number" name="floor_number" id="floor_number" class="form-control"
                                        required>
                                </td>
                                <td>
                                    <input type="number" name="capacity" id="capacity" class="form-control" required>
                                </td>
                                <td>
                                    <select class="form-select modalSelect2" name="start_time_id" id="start_time_id"
                                        required>
                                        <option disabled selected value>--Start Time--</option>
                                        <% for(let time of timeList) { %>
                                        <option value="<%- time.id %>">
                                            <%- time.start_time %>
                                        </option>
                                        <% } %>
                                    </select>
                                </td>
                                <td>
                                    <select class="form-select modalSelect2" name="end_time_id" id="end_time_id"
                                        required>
                                        <option disabled selected value>--End Time--</option>
                                        <% for(let time of timeList) { %>
                                        <option value="<%- time.id %>">
                                            <%- time.end_time %>
                                        </option>
                                        <% } %>
                                    </select>
                                </td>
                                <td>
                                    <select class="form-select modalSelect2" name="is_basement" id="is_basement"
                                        required>
                                        <option selected value="0">No</option>
                                        <option value="1">Yes</option>
                                    </select>
                                </td>
                                <td>
                                    <select class="form-select modalSelect2" name="is_processed" id="is_processed"
                                        required>
                                        <option selected value="0">No</option>
                                        <option value="1">Yes</option>
                                    </select>
                                </td>
                                <td>

                                    <i class="far fa-edit d-none"></i>
                                    <i class="fas fa-trash-alt text-danger cursor-pointer removeroom"></i>

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button> -->
                <button type="button" class="btn btn-success  btn-sm" id="add-more-room"><i class="fas fa-plus"></i> Add
                    More Room</button>
                <button type="button" class="btn  modal-inputform-btn addRoom" id="insertRoom">Create Room</button>
                <button type="button" class="btn  modal-inputform-btn updateRoom d-none">Update Room Data</button>
            </div>


        </div>
    </div>
</div>





<%- include("../partials/footer") %>
<script src="https://cdn.rawgit.com/botmonster/jquery-bootpag/master/lib/jquery.bootpag.min.js"></script>
<script src="/js/dashboardscript.js"></script>

<script>
    $(document).ready(function () {


        $(".homeCard .border").hover(function () {
            $this = $(this)

            $this.find("img").css({
                "transition": "0.3s",
                "transform": "scale(0.7)"
            })

            setTimeout(function () {
                $this.find("img").css({
                    "transition": "0.2s",
                    "transform": "scale(1)"
                })
            }, 200)

        }, function () {
            $this.find("img").css({
                "transition": "0.2s",
                "transform": "scale(1)"
            })
        })

        $(".homeCard .border").hover(function () {
            $this = $(this)


            $this.find("img").css({
                "transition": "0.3s",
                "transform": "scale(0.7)"
            })

            setTimeout(function () {
                $this.find("img").css({
                    "transition": "0.2s",
                    "transform": "scale(1)"
                })
            }, 200)

        }, function () {
            $this.find("img").css({
                "transition": "0.2s",
                "transform": "scale(1)"
            })
        })


        let options = {
            dataLabels: {
                enabled: true
            },
            legend: {
                show: true
            },
            chart: {
                type: 'donut',
                height: 200
            },
            plotOptions: {
                pie: {
                    donut: {
                        size: '40%'
                    }
                }
            },
            series: [44, 55, 11],
            labels: ['Room booked', 'Total room', 'Room available for booking']
        }
        var chart = new ApexCharts(document.querySelector("#chart1"), options);
        chart.render();
        
        $("#insertRoom").on('click', function () {
            let roomElems = $('#add-room-table tbody tr');
            let roomCount = roomElems.length;
            let roomJson = [];
            roomElems.each(function (index, elem) {
                let building_lid = $('#building_lid').val();
                let handled_by = $("#handled_by").val();
                let roomNumber = $(elem).find(`input[name='roomNo']`).val()
                let room_type_id = $(elem).find(`select[name='room_type_id']`).val();
                let floor_number = $(elem).find(`input[name='floor_number']`).val();
                let capacity = $(elem).find(`input[name='capacity']`).val();
                let start_time_id = $(elem).find(`select[name='start_time_id']`).val();
                let end_time_id = $(elem).find(`select[name='end_time_id']`).val();
                let is_basement = $(elem).find(`select[name='is_basement']`).val();
                let is_processed = $(elem).find(`select[name='is_processed']`).val();

                if (index < roomCount - 1) {
                    let obj = {
                        building_lid: building_lid,
                        handled_by: handled_by,
                        room_number: roomNumber,
                        room_type_id: room_type_id,
                        floor_number: floor_number,
                        capacity: capacity,
                        start_time_id: start_time_id,
                        end_time_id: end_time_id,
                        is_basement: is_basement,
                        is_processed: is_processed
                    }
                    console.log('OBJ1::::::::::>>',obj)
                    roomJson.push(obj)
                } else {
                    let obj = {
                        building_lid: building_lid,
                        handled_by: handled_by,
                        room_number: roomNumber,
                        room_type_id: room_type_id,
                        floor_number: floor_number,
                        capacity: capacity,
                        start_time_id: start_time_id,
                        end_time_id: end_time_id,
                        is_basement: is_basement,
                        is_processed: is_processed
                    }
                    console.log('OBJ2::::::::::>>',obj)
                    roomJson.push(obj)
                }
            })
            console.log('roomJson:::::::>>', roomJson)
            let ApiObj = {
                url: '/management/rooms',
                type: 'POST',
                data: {
                    inputJSON: JSON.stringify(roomJson)
                },
                dataType: 'JSON'
            }

            ajaxApi(ApiObj).then(result => {
                console.log('Result:::::::::::', result)
                //   location.reload()
                notify();
            }).catch(error => {

                let errors = JSON.parse(error.responseJSON)
                console.log('Error:::::::::::', errors)
                let errorHtml = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h3>Error</h3>
                    <p>${errors.description}</p>
                    <ul>`
                errors.data.map(er => {
                    console.log('Errr:::::::::::>>', er)
                    errorHtml +=
                        `<li>${er.org_id} ${er.org_abbr}</li>`
                })
                errorHtml +=
                    `</ul> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
                $("#errorHtml").html(errorHtml)
            })

        })

        $('#searchkeyword').on('input', delay(function (e) {
            let keyword = $("#searchkeyword").val()
            $.ajax({
                type: "GET",
                url: "/management/room/search",
                data: {
                    keyword: keyword
                },
                success: function (data) {
                    console.log('roomList::::::', data)
                    let roomList = data.data;

                    let quoteAjax = `<table class="table table-bordered" id="roomTable">
                    <thead>
                                <th>Room No</th>
                                <th>Building</th>
                                <th>Type</th>
                                <th>Floor</th>
                                <th>Capacity</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Is Basement</th>
                                <th>Handled By</th>
                                <th>Campus</th>
                                <th>Is Processed</th>
                                <th>Action</th>
                    </thead>
                    <tbody>`;

                    if (roomList.length > 0) {
                        for (room of roomList) {
                            quoteAjax +=
                                ` <tr>
                                <td>${room.room_number}</td>
                                <td>${room.building_name}</td>
                                <td>${room.room_type}</td>
                                <td>${room.floor_number}</td>
                                <td>${room.capacity}</td>
                                <td>${room.start_time}</td>
                                <td>${room.end_time}</td>
                                <td>${room.is_basement}</td>
                                <td>${room.handled_by}</td>
                                <td>${room.campus}</td>
                                <td>${room.is_processed ? 'Yes' : 'No'}</td>
                               <td>
                                    <i class="fas fa-edit text-dark cursor-pointer edit-room"
                                        data-room-id="${room.id}"></i>
                                    <a data-room-id="${room.id}"
                                        class="fas fa-trash-alt text-danger delete-room"></a>
                                </td>
                            </tr>`;
                        }
                    } else {
                        quoteAjax +=
                            ` <tr>
                                <td colspan="12">No Data Found</td>
                            </tr>`;
                    }


                    quoteAjax += `<tbody></table>`
                    $("#roomTable").html(quoteAjax);
                },

            })
        }, 500));






        // Fetch Single Room
        $('#roomTable').on('click', '.edit-room', function () {
            $("#add-room-modal-title").html('Update Room')
            $("#insertRoom").addClass('d-none')
            $("#add-room").addClass('d-none')
            $(".updateRoom").removeClass('d-none')

            $.ajax({
                url: '/management/room/single',
                method: 'GET',
                type: 'JSON',
                data: {
                    id: $(this).attr('data-room-id')
                },
                success: data => {

                    let roomData = data.roomData;
                    console.log('success: ', roomData)
                    $("#roomId").val(roomData.roomid)
                    $("#update-roomNo").val(roomData.room_number)
                    $("#buildingName").val(roomData.buildingid).trigger('change'),
                        $("#campus").val(roomData.id).trigger('change'),
                        $("#roomType").val(roomData.roomtypeId)
                    $("#floorNo").val(roomData.floor_number)
                    $("#capacity").val(roomData.capacity)
                    $("#startTime").val(roomData.start_time)
                    $("#endTime").val(roomData.end_time)
                    $("#handledBy").val(roomData.orgid)
                    $("#add-room-modal").modal('show')
                },
                error: err => {
                    console.log('Error: ', err)
                }
            })
        })

        // Update Room
        $(".updateRoom").on('click', function () {
            $.ajax({
                url: '/management/room',
                method: 'PUT',
                type: 'JSON',
                data: {
                    roomid: $("#roomId").val(),
                    room_number: $('#update-roomNo').val(),
                    buildingid: $('#buildingName').val(),
                    roomtypeId: $('#roomType').val(),
                    floor_number: $('#floorNo').val(),
                    capacity: $('#capacity').val(),
                    start_time: $('#startTime').val(),
                    end_time: $('#endTime').val(),
                    is_basement: $('#isBasement').val(),
                    orgid: $("#handledBy").val()

                },
                success: data => {
                    location.reload()
                },
                error: err => {
                    console.log(err)
                    let error = err.responseJSON.errors
                    let errorHtml = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h3>Error</h3>
                    <ul>`
                    error.map(er => {
                        console.log(er.msg)
                        errorHtml +=
                            `<li>${er.msg}</li>`
                    })
                    errorHtml +=
                        `</ul> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
                    $("#errorHtml").html(errorHtml)
                }
            })
        })

        // Deleting Room
        $('#roomTable').on('click', '.delete-room', function () {
            console.log('deletehit:::::')
            $.ajax({
                url: '/management/room',
                method: 'DELETE',
                type: 'JSON',
                data: {
                    roomId: $(this).attr('data-room-id')
                },
                success: data => {
                    location.reload()
                },
                error: err => {
                    console.log('Error: ', err)
                }
            })
        })


    })
</script>
