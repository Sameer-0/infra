<%- include("../partials/head") %>
<%- include("../partials/leftSidebar") %>
<%- include("../partials/header") %>
<!--Notificaion icon-->
<!--HEADER END-->

<div class="main-content">
    <!--DASHBOARD CONTENT START-->
    <div class="card table-card">
        <div class="card-header table-card-header text-uppercase d-flex align-items-center justify-content-between">
            <h5>Organization List</h5>
            <button class="btn ms-auto add-btn" data-bs-toggle="modal" data-bs-target="#add-org-modal"><i
                    class="fas fa-plus"></i></button>
        </div>
        <div class="card-body table-responsive">
            <div class="table-searchbar-container"><button type="button"><i class="fas fa-search"></i> </button><input
                    type="search" id="searchkeyword" placeholder="Enter keywords" class="table-searchbar"></div>


            <table class="table custom_row" id="organizationTable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Abbr</th>
                        <th>Name</th>
                        <th>Complete Name</th>
                        <th>Type</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let org of orgList) { %>
                    <tr>
                        <td>
                            <%- org.org_id %>
                        </td>
                        <td>
                            <%- org.org_abbr %>
                        </td>
                        <td>
                            <%- org.org_name %>
                        </td>
                        <td>
                            <%- org.org_complete_name %>
                        </td>
                        <td>
                            <%- org.org_type %>
                        </td>
                        <td>
                            <i class="fas fa-edit text-dark cursor-pointer edit-org" data-org-id="<%- org.id %>"></i>
                            <a data-org-id="<%- org.id %>" class="fas fa-trash-alt text-danger delete-org"></a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>


            <div class="d-flex justify-content-between">
                <div>
                    <p>Total entries:<%- pageCount %>
                    </p>
                </div>
                <div>
                    <p id="pagination"></p>
                </div>
            </div>

        </div>
    </div>
    <!--DASHBOARD CONTENT END-->
</div>





<!-- ADD NEW ORG MODAL -->
<div class="modal fade" id="add-org-modal" aria-labelledby="add-building-modal" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content modal-inputform">
            <div class="modal-header modal-inputform-header">
                <h5 class="modal-title" id="add-org-modal-title">Add New
                    Organization</h5>
                <button type="button" class="btn fs-4 text-white" data-bs-dismiss="modal" aria-label="Close"><i
                        class="fas fa-times"></i></button>
            </div>
            <div class="modal-body">
                <div id="errorHtml"></div>
                <input type="hidden" id="roomId" name="roomId">
                <div class="table-responsive">
                    <table class="table table-bordered" id="add-more-org-table">
                        <thead>
                            <th>Organization Id</th>
                            <th>Organization Abbr</th>
                            <th>Organization Name</th>
                            <th>Organization Complete Name</th>
                            <th>Organization Type</th>
                            <th>Action</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <input name="orgId" id="orgId" type="number" class="form-control"
                                        placeholder="Organization Id" required>
                                </td>
                                <td>
                                    <input name="orgAbbr" id="orgAbbr" type="text" class="form-control"
                                        placeholder="Organization Abbr" required>
                                </td>
                                <td>
                                    <input name="orgName" id="orgName" type="text" class="form-control"
                                        placeholder="Organization Name" required>
                                </td>
                                <td>
                                    <input name="orgCompleteName" id="orgCompleteName" type="text" class="form-control"
                                        placeholder="Organization Complete Name" required>
                                </td>
                                <td>
                                    <select class="form-control modalSelect2" name="orgType" id="orgType" required>
                                        <option disabled selected value>--Organization Type--</option>
                                        <% for(let orgType of orgtypeList) { %>
                                        <option value="<%- orgType.id %>">
                                            <%- orgType.name %>
                                        </option>
                                        <% } %>
                                    </select>
                                </td>

                                <td>

                                    <i class="far fa-edit d-none"></i>
                                    <i class="fas fa-trash-alt text-danger cursor-pointer remove"></i>

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button> -->
                <button type="button" class="btn btn-success  btn-sm" id="add-more-orgnization"><i
                        class="fas fa-plus"></i> Add
                    More Organization</button>
                <button type="submit" class="btn  createOrg modal-inputform-btn">Create
                    Organization</button>
                <button type="submit" class="btn  updateOrg modal-inputform-btn d-none">Update
                    Organization</button>
            </div>

        </div>
    </div>
</div>




<%- include("../partials/footer") %>
<script src="https://cdn.rawgit.com/botmonster/jquery-bootpag/master/lib/jquery.bootpag.min.js"></script>
<script>
    $('#add-more-orgnization').on('click', function () {
        console.log("Organization Added::::")

        let lastTr = $('#add-more-org-table tbody tr:last-child')
        let orgId = lastTr.find(`select[name='orgId']`).val();
        let orgAbbr = lastTr.find(`select[name='orgAbbr']`).val();
        let orgName = lastTr.find(`select[name='orgName']`).val();
        let orgCompleteName = lastTr.find(`select[name='orgCompleteName']`).val();
        let orgType = lastTr.find(`select[name='orgType']`).val();

        let clonedTr = lastTr.clone();
        clonedTr.find(`input[name='orgId']`).val('')
        clonedTr.find(`input[name='orgAbbr']`).val('')
        clonedTr.find(`select[name='orgName']`).val('')
        clonedTr.find(`select[name='orgCompleteName']`).val('')
        clonedTr.find(`select[name='orgType']`).val(orgType).trigger('change');

        $('#add-more-org-table tbody').append(clonedTr)
    })

    $('#add-org-modal').on('click', '.remove', function () {
        let trLength = $('#add-org-modal tbody tr').length;

        if (trLength > 1) {
            $(this).closest('tr').remove()
        } else {
            alert('Cannot delete this room.')
        }
    })

    //Create 

    $(".createOrg").on('click', function () {

        let orgElems = $('#add-more-org-table tbody tr');
        let orgCount = orgElems.length;

        let orgJson = [];

        orgElems.each(function (index, elem) {
            let orgId = $(`input[name='orgId']`).val()
            let orgAbbr = $(`input[name='orgAbbr']`).val()
            let orgName = $(`input[name='orgName']`).val()
            let orgCompleteName = $(elem).find(`input[name='orgCompleteName']`).val()
            let orgType = $(elem).find(`select[name='orgType']`).val()

            if (index < orgCount - 1) {
                let obj = {
                    orgId: orgId,
                    orgAbbr: orgAbbr,
                    orgName: orgName,
                    orgCompleteName: orgCompleteName,
                    orgType: orgType
                }
                orgJson.push(obj)
            } else {
                let obj = {
                    orgId: orgId,
                    orgAbbr: orgAbbr,
                    orgName: orgName,
                    orgCompleteName: orgCompleteName,
                    orgType: orgType
                }
                orgJson.push(obj)
            }
        })

        console.log('orgJson:::::::>>', orgJson)

        $.ajax({
            url: '/management/organization',
            method: 'POST',
            type: 'JSON',
            data: {
                orgJson:JSON.stringify(orgJson)
            },
            success: data => {
                if (data.status == 200) {
                    location.reload()
                } else {
                    $(".errorMsg").html(data.message)
                }

            },
            error: err => {
                let error = err.responseJSON.errors
                let errorHtml = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h3>Error</h3>
                    <ul>`
                error.map(er => {
                    errorHtml +=
                        `<li>${er.msg}</li>`
                })
                errorHtml +=
                    `</ul> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
                $("#errorHtml").html(errorHtml)
            }
        })
    })

    $('#organizationTable').on('click', '.edit-org', function () {
        $(".createOrg").addClass('d-none')
        $(".updateOrg").removeClass('d-none')

        $("#add-org-modal-title").html("Update Organization")
        $.ajax({
            url: '/management/organization/single',
            method: 'POST',
            type: 'JSON',
            data: {
                Id: $(this).attr('data-org-id')
            },
            success: data => {
                let org = data.orgData;
                $('#orgLid').val(org.id)
                $('#orgId').val(org.org_id)
                $('#orgAbbr').val(org.org_abbr)
                $('#orgName').val(org.org_name)
                $('#orgCompleteName').val(org.org_complete_name)
                $('#orgType').val(org.org_type_id).trigger('change')
                $("#add-org-modal").modal('show')
            },
            error: err => {
                console.log('Error: ', err)
            }
        })
    })

    $(".updateOrg").on('click', function () {
        $.ajax({
            url: '/management/organization',
            method: 'PUT',
            type: 'JSON',
            data: {
                id: $('#orgLid').val(),
                org_id: $('#orgId').val(),
                org_abbr: $('#orgAbbr').val(),
                org_name: $('#orgName').val(),
                org_complete_name: $('#orgCompleteName').val(),
                org_type_id: $('#orgType').val()
            },
            success: data => {
                if (data.status == 200) {
                    location.reload()
                } else {
                    $(".errorMsg").html(data.message)
                }

            },
            error: err => {
                let error = err.responseJSON.errors
                let errorHtml = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h3>Error</h3>
                    <ul>`
                error.map(er => {
                    errorHtml +=
                        `<li>${er.msg}</li>`
                })
                errorHtml +=
                    `</ul> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
                $("#errorHtml").html(errorHtml)
            }
        })
    })


    //Delete
    $('.delete-org').on('click', function () {
        $(".createOrg").addClass('d-none')
        $(".updateOrg").removeClass('d-none')

        $("#add-org-modal-title").html("Update Organization")
        $.ajax({
            url: '/management/organization',
            method: 'DELETE',
            type: 'JSON',
            data: {
                Id: $(this).attr('data-org-id')
            },
            success: data => {
                location.reload()
            },
            error: err => {
                console.log('Error: ', err)
            }
        })
    })



    //Pagination Here
    let pageCount = `<%- pageCount %>`
    console.log("Page Count=====>>>", pageCount)
    let pageNos = Math.ceil(Number(pageCount) / 10)
    console.log("Page Numbers", pageNos)
    $('#pagination').bootpag({
        total: pageNos,
        page: 1,
        maxVisible: 10,
        leaps: true,
        firstLastUse: true,
        first: '←',
        last: '→',
        wrapClass: 'pagination',
        activeClass: 'active',
        disabledClass: 'disabled',
        nextClass: 'next',
        prevClass: 'prev',
        lastClass: 'last',
        firstClass: 'first'
    }).on("page", function (event, num) {

        $.ajax({
            type: "POST",
            url: "/management/organization/pagination",
            data: {
                pageNo: num
            },
            success: function (data) {
                let orgList = data.data;
                console.log('orgList:::::::>>', orgList)
                let orgAjax = `<table class="table custom_row" id="organizationTable">
                    <thead>
                        <th>Id</th>
                        <th>Abbr</th>
                        <th>Name</th>
                        <th>Complete Name</th>
                        <th>Type</th>
                        <th>Action</th>
                    </thead>
                    <tbody>`;
                for (org of orgList) {
                    orgAjax +=
                        `     <tr>
                            <td>${org.org_id}</td>
                            <td>${org.org_abbr}</td>
                            <td>${org.org_name}</td>
                            <td>${org.org_complete_name}</td>
                            <td>${org.org_type}</td>
                            <td>
                                <i class="fas fa-edit text-dark cursor-pointer edit-org" data-org-id="${org.id}"
                                    ></i>
                                <a data-org-id="${org.id}" class="fas fa-trash-alt text-danger delete-org"></a>
                            </td>
                        </tr>`
                }
                orgAjax += `<tbody></table>`
                $("#organizationTable").html(orgAjax);
            }
        })
    });




    //search feature delay function is writter in script.js file which is located in public/js/script.js
    $('#searchkeyword').on('input', delay(function (e) {
        let keyword = $("#searchkeyword").val()
        $.ajax({
            type: "POST",
            url: "/management/organization/search",
            data: {
                keyword: keyword
            },
            success: function (data) {
                console.log('campusList::::::', data)
                let orgList = data.data;

                let AjaxTable = `<table class="table table-bordered" id="organizationTable">
                    <thead>
                        <th>Id</th>
                        <th>Abbr</th>
                        <th>Name</th>
                        <th>Complete Name</th>
                        <th>Type</th>
                        <th>Action</th>
                    </thead>
                    <tbody>`;

                if (orgList.length > 0) {
                    for (org of orgList) {
                        AjaxTable +=
                            `     <tr>
                            <td>${org.org_id}</td>
                            <td>${org.org_abbr}</td>
                            <td>${org.org_name}</td>
                            <td>${org.org_complete_name}</td>
                            <td>${org.org_type}</td>
                            <td>
                                <i class="fas fa-edit text-dark cursor-pointer edit-org" data-org-id="${org.id}"
                                    ></i>
                                <a data-org-id="${org.id}" class="fas fa-trash-alt text-danger delete-org"></a>
                            </td>
                        </tr>`
                    }
                } else {
                    AjaxTable +=
                        ` <tr>
                                <td colspan="6">No Data Found</td>
                            </tr>`;
                }
                AjaxTable += `<tbody></table>`
                $("#organizationTable").html(AjaxTable);
            }
        })
    }, 500));
</script>
<%- include("../partials/footerEnd") %>