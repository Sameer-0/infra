<!--HEADER END-->

<div class="main-content">

    <div class="row my-3 gx-3 gy-3 row1-data ">

        <div class="col-xl-2 col-lg-4 col-md-6">
            <a href="/admin/sessions/types">
                <div class="card row1-data-card text-center">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center sub-nav">
                        <img src="/icon_imgs/room-type.PNG" alt="">
                        <p class="fw-normal pt-1">SESSION TYPE</p>
                    </div>
                </div>
            </a>
        </div>

    </div>

    <!--DASHBOARD CONTENT START-->
    <div class="card table-card">
        <div class="card-header table-card-header text-uppercase d-flex align-items-center justify-content-between">
            <div>
                <h5>Session dates</h5>
            </div>
            <div>
                <button type="button" class="btn add-btn ms-auto" data-bs-toggle="modal"
                    data-bs-target="#add-sessiondate-modal">
                    <i class="fas fa-plus"></i></button>
                <button class="btn ms-auto select-delete-sessiondate add-btn "><i class="fas fa-trash"></i></button>
                <button class="btn ms-auto bulk-delete-sessiondate add-btn "><img src="/icons/delete.png" alt=""
                        width="26px" height="32px"></button>
            </div>
        </div>

        <div class="card-body table-responsive">
            <div class="table-searchbar-container"><button type="button"><i class="fas fa-search"></i> </button><input
                    type="search" id="searchkeyword" placeholder="Enter keywords" class="table-searchbar"></div>

            <table class="table custom_row table-bordered" id="sessionDateTable">
                <thead>
                    <th>Sr No.</th>
                    <th>Acad session</th>
                    <th>Session type</th>
                    <th>Session start date</th>
                    <th>Session end date</th>
                    <th>Action</th>
                    <th>All <input type="checkbox" class="selectAll-Session-dates"></th>
                </thead>
                <tbody>
                    <% let count = 1 %>
                    <% for (let program of sessionDateList) { %> 
                    <tr>
                        <td><%- count++ %></td>
                        <td><%- program.acad_session %></td>
                        <td><%- program.session_type %></td>
                        <td><%- program.startDate %></td>
                        <td><%- program.endDate %></td>
                        <td>
                            <i class="fas fa-edit text-dark cursor-pointer edit-session-date"
                                data-session-date-id="<%- program.id %>"></i>
                        </td>
                        <td>
                            <input type="checkbox" data-session-date-id="<%- program.id %>" class="delete-session-type">
                        </td>
                    </tr>

                    <% } %>
                </tbody>
            </table>
            <div class="d-flex justify-content-between">
                <div>
                    <p>Total entries:<%- pageCount %>
                    </p>
                </div>
                <div>
                    <p id="pagination"></p>
                </div>
            </div>
        </div>
    </div>
</div>


<!--ADD Modal -->
<div class="modal fade" id="add-sessiondate-modal" tabindex="-1" aria-labelledby="add-sessiondate-modal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-inputform">
            <div class="modal-header modal-inputform-header">
                <h5 class="modal-title" id="add-sessiondate-modal-title">ADD SESSION DATE</h5>
                <button type="button" class="btn fs-4" data-bs-dismiss="modal" aria-label="Close"><i
                        class="fas fa-times"></i></button>
            </div>
            <div class="modal-body">
                <div id="errorHtml"></div>
                <input type="hidden" id="Id">
                <div class="mb-3">
                    <label for="acadSession" class="form-label">Enter Acad session</label>
                    <select class="select2" name="end_time_id" id="end_time_id" required>
                        <option  value="">--select--</option>
                        <%for (let program of programSessions){%>
                      <option value="<%- program.id %>"><%-program.acad_session %></option>
                        <%}%>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="sessionType" class="form-label">Enter Session type</label>
                    <select name="sessionType" id="sessionType" class="select2" >
                        <option value="" >--select--</option>
                        <%for (let session of sessionTypes){%>
                      <option value="<%- session.id %>"><%-session.name %></option>
                        <%}%>
                    </select>
                    
                </div>
                <div class="mb-3">
                    <label for="startDate" class="form-label">Enter Start Date</label>
                    <select name="startDate" id="startDate" class="select2" >
                        <option value="" >--select--</option>
                        <%for (let slot of AcademicCalenderList){%>
                      <option value="<%- slot.id %>"><%-slot.date %></option>
                        <%}%>
                    </select>
              
                </div>
                <div class="mb-3">
                    <label for="endDate" class="form-label">Enter End Date</label>
                    <select name="endtDate" id="endtDate" class="select2" >
                        <option value="" >--select--</option>
                        <%for (let slot of AcademicCalenderList){%>
                      <option value="<%- slot.id %>"><%-slot.date %></option>
                        <%}%>
                    </select>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <span class="errorMsg"></span>
                    <button type="submit" class="btn createSessionDate modal-inputform-btn">Create Session Date</button>
                    <button type="submit" class="btn updateSessionDate modal-inputform-btn d-none">Update Session Date</button>
                </div>
            </div>
        </div>
    </div>


    <%- include("../partials/footer") %>
    <script src="https://cdn.rawgit.com/botmonster/jquery-bootpag/master/lib/jquery.bootpag.min.js"></script>
    <script>
        $(document).ready(function () {

            $('.select2').select2({
        dropdownParent: $('#add-sessiondate-modal')});


            $('.createSessionDate').on('click', function () {
                console.log($('#acadSession').val())
                $.ajax({
                    url: '/admin/sessions/dates',
                    method: 'POST',
                    type: 'JSON',
                    data: {
                        acadSession: $('#acadSession').val(),
                        sessionType: $('#sessionType').val(),
                        startDate: $('#startDate').val(),
                        endDate: $('#endtDate').val(),
                    },
                    success: (data) => {
                        location.reload()
                    },
                    error: err => {
                        console.log('err::::::::',err)
                        showError(err.responseJSON)
                    }
                })
            })

            //EDIT SESSION DATE TYPE
            $("#sessionDateTable").on('click', '.edit-session-date', function () {
                $(".createSessionDate").addClass('d-none')
                $(".updateSessionDate").removeClass('d-none')
                $("#add-session-modal-title").html('UPDATE SESSION DATE')

                $.ajax({
                    url: '/admin/sessions/dates/findOne',
                    method: 'GET',
                    type: 'JSON',
                    data: {
                        id: $(this).attr('data-session-date-id')
                    },
                    success: data => {
                        console.log(data)
                        let obj = data.data;
                    
                        $('#programName').val(obj.program_session_lid).trigger('change')
                        $('#sessionType').val(obj.session_type_lid).trigger('change')
                        $('#startDate').val(obj.start_date_id).trigger('change')
                        $('#endtDate').val(obj.end_date_id).trigger('change')
                        $('#Id').val(obj.id)
                        $("#add-sessiondate-modal").modal('show')
                    },
                    error: err => {
                        showError(err.responseJSON)
                    }
                })
            })

            //Select All campus
            $("#sessionDateTable").on('click', '.selectAll-Session-dates', function () {
                if (this.checked) {
                    // Iterate each checkbox
                    $('.delete-session-type:checkbox').each(function () {
                        this.checked = true;
                    });
                } else {
                    $('.delete-session-type:checkbox').each(function () {
                        this.checked = false;
                    });
                }
            })

            // UPDATE SESSION DATE 
            $(".updateSessionDate").on('click', function () {
                $.ajax({
                    url: '/admin/sessions/dates',
                    method: 'PUT',
                    type: 'JSON',
                    data: {
                        id: $("#Id").val(),
                        acadSession: $('#acadSession').val(),
                        sessionType: $('#sessionType').val(),
                        startDate: $('#startDate').val(),
                        endDate: $('#endtDate').val(),

                    },
                    success: (data) => {
                        if (data.status == 200) {
                            location.reload()
                        } else {
                            $(".errorMsg").html(data.message)
                        }
                    },
                    error: err => { 
                        showError(err.responseJSON)
                    }
                })
            })

            //Delete Single and mutiple Delete
            $('.select-delete-sessiondate').on('click', function () {
                let deleteids = []
                $('.delete-session-type:checked').each(function () {
                    let obj = {
                        id: $(this).attr("data-session-date-id"),
                    }
                    deleteids.push(obj) 
                })
                console.log(deleteids);

                if (deleteids.length > 0) {

                    let ApiObj = {
                        url: '/admin/sessions/dates',
                        type: 'DELETE',
                        data: {
                            Ids: JSON.stringify(deleteids)
                        },
                        dataType: 'JSON'
                    }
                    ajaxApi(ApiObj).then(result => {
                        location.reload()
                      
                    }).catch(error => {
                        showError(error.responseJSON)
                    })
                } else {
                    alert('Select Fields')
                }
            })

            //Bulk Delete
            $(".bulk-delete-sessiondate").on('click', function () {
                console.log('delete all')
                let ApiObj = {
                    url: '/admin/sessions/dates',
                    type: 'PATCH',
                    data: {},
                    dataType: 'JSON'
                }

                ajaxApi(ApiObj).then(result => {
                    location.reload()
                }).catch(error => {
                    showError(error.responseJSON)

                })

            })

            // SEARCH PROGRAM TYPE
            $('#searchkeyword').on('input', delay(function (e) {
               
                let keyword = $("#searchkeyword").val()
                $.ajax({
                    type: "GET",
                    url: "/admin/sessions/dates/search",
                    data: {
                        keyword: keyword
                    },
                    success: function (data) {
                        AjaxtTable(data.data)
                        console.log(data.data);
                    }
                })
            }, 500));



             //Pagination Here
            let pageCount = `<%- pageCount %>`
            console.log("Page Count=====>>>", pageCount)
            let pageNos = Math.ceil(Number(pageCount) / 10)

            console.log("Page Numbers", pageNos)
            $('#pagination').bootpag({
            total: pageNos,
            page: 1,
            maxVisible: 10,
            leaps: true,
            firstLastUse: true,
            first: '←',
            last: '→',
            wrapClass: 'pagination',
            activeClass: 'active',
            disabledClass: 'disabled',
            nextClass: 'next',
            prevClass: 'prev',
            lastClass: 'last',
            firstClass: 'first'
            }).on("page", function (event, num) {
            $.ajax({
                type: "POST",
                url: "/admin/sessions/dates/pagination",
                data: {
                    pageNo: num
                },
                success: function (data) {
                    console.log('data',data)
                    AjaxtTable(data.data) 
                }
            })
        });

            function AjaxtTable(sessionDates) {
                let AjaxTable = `<table class="table custom_row table-bordered" id="sessionTypeTable">
                <thead>
                    <th>Sr No.</th>
                    <th>Acad session</th>
                    <th>Session type</th>
                    <th>Session start date</th>
                    <th>Session end date</th>
                    <th>Action</th>
                    <th>All <input type="checkbox" class="selectAll-Session-dates"></th>
                </thead>`;
                if (sessionDates.length > 0) {
                    let count = 1;
                    for (list of sessionDates) {
                        AjaxTable +=
                            `<tr>
                        <td>${count++}</td>
                        <td>${list.acad_session}</td>
                        <td>${list.session_type}</td>
                        <td>${list.startDate}</td>
                        <td>${list.endDate}</td>
                        <td>
                            <i class="fas fa-edit text-dark cursor-pointer edit-session"
                                data-session-date-id="${list.id}"></i>
                        </td>
                        <td>
                            <input type="checkbox" data-session-date-id="${list.id}" class="delete-session-type">
                        </td>
                    </tr>`
                    }
                } else {
                    AjaxTable +=
                        ` <tr>
                                <td colspan="3">No Data Found</td>
                            </tr>`;
                }
                AjaxTable += `<tbody></table>`
                $("#sessionDateTable").html(AjaxTable);
            }


            
            function showError(errors) {
                let errorHtml = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h3>Error</h3>`;
                errorHtml += `<ul>`;
                errors.errors.map(er => {
                    errorHtml +=
                        `<li>${er.msg}</li>`
                })

                errorHtml +=
                    `</ul><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
                $("#errorHtml").html(errorHtml)
            }


            // function showError(errors) {
            //     let errorHtml = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
            //         <h3>Error</h3>
            //         <p>${errors.description}</p>
            //         <ul>`
