<!-- MODAL FOR COURSE DAY PREFERENCE -->
<div class="modal fade" id="add-schooltiming-modal" tabindex="-1" role="dialog" aria-labelledby="add-holiday-modal"
    aria-hidden="true">
    <div class="modal-dialog modal-fullscreen" role="document">
        <div class="modal-content modal-inputform">
            <div class="modal-header  modal-inputform-header">
                <h5 class="modal-title text-dark" id="add-org-modal-title">Create School Timing</h5>
                <button type="button" class="btn fs-4 text-dark" data-bs-dismiss="modal" aria-label="Close"><i
                        class="fas fa-times"></i></button>

            </div>
            <div class="modal-body">
                <div id="errorHtml"></div>
             <div class="row">
                 <div class="col-md-2 border-end border-primary">
                    <div class="mb-3">
                        <label class="form-label">Enter Name</label>
                        <input type="text" class="form-control" name="school_timings_name" id="school_timings_name">
                    </div>

                <div class="mb-3">
                    <label class="form-label">Select Program</label>
                    <select class="form-select"  name="program_name" id="program_name">
                    <% for(let programs of programList){%>
                        <option value="<%- programs.id%>"><%- programs.program_name%></option>
                        <%}%>
                    </select>
                </div>

                <div class="mb-3">
                 <label class="form-label">Select Session</label>
                    <select class="form-select" name="acad_session" id="acad_session"></select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Select Day Name</label>
                    <select class="form-select" name="day_name" id="day_name"></select>
                </div>


                <div class="mb-3">
                    <label class="form-label">Select Start Time</label>
                    <select class="form-select"  name="slot_start_lid" id="slot_start_lid">
                        <% for(let start of slotInterval){%>
                            <option value="<%- start.id%>"><%- start.start_time%></option>
                        <%}%>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Select End Time</label>
                    <select class="form-select"  name="slot_end_lid" id="slot_end_lid">
                        <% for(let end of slotInterval){%>
                            <option value="<%- end.id%>"><%- end.start_time%></option>
                        <%}%>
                    </select>
                </div>



                <div class="mb-3 d-grid gap-2">
                    <button class="btn btn-info text-light AddRoomPreference">ADD SCHOOL TIMING</button>
                </div>

                 </div>
                 <div class="col-md-10">
                    <div class="table-responsive">
                        <table class="table table-bordered table-bordered" id="add-more-schoolTiming-table">
                            <thead>
                                <th>#</th>
                                <th>Name</th>
                                <th>Program Name</th>
                                <th>Session</th>
                                <th>Day</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Action</th>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
                    </div>
                 </div>
             </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn createSchoolTiming modal-inputform-btn">CREATE</button>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>


<script>
    $(document).ready(function () {


        $(".AddRoomPreference").on('click',function(){
            let school_timings_name = $("#school_timings_name").val()
            let program_lid = $("#program_name").val()// Get Value of Dropdown
            let program_text =  $("#program_name option:selected").text(); // Get Text of Dropdown
            let acad_session_lid = $("#acad_session").val();
            let acad_session_text =  $("#acad_session option:selected").text();
            let day_name_lid = $("#day_name").val();
            let day_text =  $( "#day_name option:selected").text();
            let slot_start_lid = $("#slot_start_lid").val();
            let slot_start_text =  $( "#slot_start_lid option:selected").text();
            let slot_end_lid = $("#slot_end_lid").val();
            let slot_end_text =  $( "#slot_end_lid option:selected").text();
            $("#add-more-schoolTiming-table tbody").append(`
            <tr>
                                    <td>
                                    #
                                    </td>
                                    <td data-school-timings-name="${school_timings_name}">
                                        ${school_timings_name}
                                    </td>
                                    <td data-program-lid="${program_lid}">
                                        ${program_text}
                                    </td>
                                    <td data-acad-session-lid="${acad_session_lid}">
                                        ${acad_session_text}
                                    </td>
                                    <td data-day-name-lid="${day_name_lid}">
                                        ${day_text}
                                    </td>
                                    <td data-slot-start-lid="${slot_start_lid}">
                                        ${slot_start_text}
                                    </td>
                                    <td data-start-end-lid="${slot_end_lid}">
                                        ${slot_end_text}
                                    </td>
                                    <td>
                                        <i class="far fa-edit d-none"></i>
                                        <i class="fas fa-trash-alt text-danger cursor-pointer remove-schoolTimingRow"></i>
                                    </td>
                                </tr>
                    `)

        })


        //Remove Element
        $("#add-more-schoolTiming-table").on('click', '.remove-schoolTimingRow', function () {
            $($(this)).fadeOut(300, function () {
               $($(this).parent().parent()).remove()
            })
        })



            //CREATING JSON FOR SCHOOL TIMING 
            $(".createSchoolTiming").on('click',function(){
            let schoolTimeList = $('#add-more-schoolTiming-table tbody tr');
            let schoolTimeCount = schoolTimeList.length;
            let schoolTimeJson = [];
            schoolTimeList.each(function (index, elem) {
                let school_timings_name = $(elem).find('td[data-school-timings-name]').attr("data-school-timings-name")
                let program_lid = $(elem).find('td[data-program-lid]').attr("data-program-lid")
                let acad_session_lid = $(elem).find('td[data-acad-session-lid]').attr("data-acad-session-lid")
                let day_name_lid = $(elem).find('td[data-day-name-lid]').attr("data-day-name-lid")
                let slot_start_lid = $(elem).find('td[data-slot-start-lid]').attr("data-slot-start-lid")
                let slot_end_lid = $(elem).find('td[data-start-end-lid]').attr("data-start-end-lid")


                if (index < schoolTimeCount - 1) {
                    let obj = {
                        school_timings_name: school_timings_name,
                        program_lid: program_lid,
                        acad_session_lid:acad_session_lid,
                        day_name_lid: day_name_lid,
                        slot_start_lid: slot_start_lid,
                        slot_end_lid: slot_end_lid
                    }
                    schoolTimeJson.push(obj)
                } else {
                    let obj = {
                        school_timings_name: school_timings_name,
                        program_lid: program_lid,
                        acad_session_lid:acad_session_lid,
                        day_name_lid: day_name_lid,
                        slot_start_lid: slot_start_lid,
                        slot_end_lid: slot_end_lid
                    }
                    schoolTimeJson.push(obj)
                }
            })
            console.log('schoolTimeJson:::::::::::::::::::::>>>>',schoolTimeJson)

            let apiObj = {
                type:"POST",
                url:"/admin/schooltime",
                data: {
                    inputJSON: schoolTimeJson
                },
                dataType:"JSON"
            }
            
            ajaxApi(apiObj).then(result => {
                console.log('result ::::::::::::::::::::::', result)
                showSuccess(result)
            }).catch(error => {
                console.log('Error ::::::::::::::::::::::', error)
                showError(error.responseJSON)
            })
        })


            //On change function
            $('#program_name').on('change', function() { 
            let program_lid = $("#program_name").val();
                
            let apiObj = {
                type:"POST",
                url:"/admin/courseworkload/preference/acadSessionList",
                data: {
                    program_lid: program_lid
                },
                dataType:"JSON"
            }

            ajaxApi(apiObj).then(result => {
                let acadList = ``
                    if(result.data.acadSessionList.length > 0){
                        for(let data of result.data.acadSessionList){
                        acadList += `<option value="${data.acad_session_lid}"> ${data.acad_session} </option>` 
                        }
                    }
                    else{
                        acadList += `<option value=""> NO SESSION FOUND <option>`
                    }
                    $("#acad_session").html(acadList);
                dayList =  `` 
                    if(result.data.dayList.length > 0){
                        for(let data of result.data.dayList){
                            dayList += `<option value="${data.day_lid}"> ${data.day_name} </option>` 
                        }
                    }
                    else{
                        dayList += `<option value=""> NO DAY FOUND <option>`
                    }
                    $("#day_name").html(dayList);
                console.log('list:::>>>', $(this).next());
            }).catch(error => console.log('error',error));
        })

 


        // SEARCH PROGRAM TYPE
        $('#searchkeyword').on('input', delay(function (e) {
            let keyword = $("#searchkeyword").val()
            $.ajax({
                type: "GET",
                url: "/admin/divisions/search",
                data: {
                    keyword: keyword
                },
                success: function (data) {
                    console.log(data)
                    AjaxtTable(data.data)
                }
            })
        }, 500));



        function showError(errors) {
            let errorHtml = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h3>Error</h3>
                    <p>${errors.description}</p>
                    <ul>`
            if (errors.data.length > 0) {
                $(errors.data).each(function (key, value) {
                    $.each(this, function (key, value) {
                        errorHtml +=
                            `<li>${key} ${value}</li>`
                    });
                });
            }
            errorHtml +=
                `</ul> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
                $("#errorHtml").html(errorHtml)
        }


        function showSuccess(errors) {
            let errorHtml = `<div class="alert alert-success alert-dismissible fade show" role="alert">
                    <h3>Success</h3>
                    <p>${errors.description}</p>
                    <ul>`
            if (errors.data.length > 0) {
                $(errors.data).each(function (key, value) {
                    $.each(this, function (key, value) {
                        errorHtml +=
                            `<li>${key} ${value}</li>`
                    });
                });
            }
            errorHtml +=
                `</ul> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
            $("#errorHtml").html(errorHtml)
        }


    })
</script>
