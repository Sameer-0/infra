                                            //     })

                                            for (let day of JSON.parse(list.days)) {
                                                console.log('DAY ID', day.id);
                                                AjaxTable +=
                                                    `<option value="${day.id}"  selected="selected">${day.day_name}</option>`
                                            }

                                            `</select>`
                                            AjaxTable += `</td>
                                    <td>
                                        <select class="roomNumber" name="roomNumber"  multiple>`
                                            //        list.rooms.forEach(function(room){
                                            // AjaxTable += `<option value="${room.id}">${room.room_number} (${room.room_type})</option>`
                                            //     })

                                            for (let room of JSON.parse(list.rooms)) {
                                                console.log('ROOM ID', room.room_type_name);
                                                AjaxTable +=
                                                    `<option value="${room.id}"  selected="selected">${room.room_number} (${room.room_type_name})</option>`
                                            }
                                            `</select>`
                                            AjaxTable += `</td>
                    </tr>`
                                        }
                                    } else {
                                        AjaxTable +=
                                            ` <tr>
                         <td colspan="8">No Data Found</td>
                      </tr>`;
                                    }
                                    AjaxTable += `<tbody></table>`
                                    $("#add-more-courseDayRoomPreference-table").html(AjaxTable);
                                    $('.select2').select2();
                                }



                                //API FOR DISPLAYING OCCUPIED DATA

                                $("#add-more-courseDayRoomPreference-table").on('click', '.show-occupied-list',
                                    function () {
                                        let batch_lid = $(this).attr("data-batch-id")
                                        let division_lid = $(this).attr("data-division-id")
                                        let course_lid = $(this).attr("data-module-id")
