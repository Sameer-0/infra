    console.log(acad_session)
})


$("#division").on('change',function(){
    let id =  $(this).val()
    if(id != null){
        let ApiObj = {
                type: 'POST',
                url: '/admin/courseworkload/preference/batch-by-divisionid',
                data: {
                    division_lid: id,
                },
                dataType: 'JSON'
            }
            ajaxApi(ApiObj).then(result => {
                console.log('Batch result::::::::::::::',result)
                let divisionName = `<option value="">Select Batch Name</option>`;
                if (result.result.length > 0) {
                    result.result.forEach(element => {
                        divisionName +=`<option value="${element.id}">${element.batch} (${element.event_type})</option>`;
                    });
                   
                } else {
                    divisionName += `<option value="">No Batch Found!</option>`;
                }
                $("#division_batch").html(divisionName).trigger('change')
            }).catch(error => {
                showError(error.responseJSON)
            })
    }else{
        console.log('Not Call Api if contain null value')
    }
})


// Filter Rooms by roomtype
$("#room_type").on('change',function(){
    let id = $(this).val()
    let apiObj = {
                type:"POST",
                url:"/admin/courseworkload/preference/find-rooms-by-type",
                data: {id:id},
                dataType:"JSON"
            }

            ajaxApi(apiObj).then(result => {
                let  courseList = ``
                    if(result.result.length > 0){
                        courseList += `<option value="">Select Rooms</option>` 
                        for(let data of result.result){
                        courseList += `<option value="${data.id}"> ${data.room_number} </option>` 
                        }
                    }
                    else{
                        courseList += `<option value="">Room not found<option>`
                    }
                    $("#room_number").html(courseList);
            }).catch(error => console.log('error',error));
})

//Set Preference
$("input[name='set-preferences']").on('click',function(){
    let value = $(this).val()
    //createCoursePreference
    if(value){
        $(".createCoursePreference").removeAttr('disabled')
    }else{
        $(".createCoursePreference").prop('disabled','disabled')
    }

    if(value == 0){
        $("#add-courseDayPreference-modal .modal-body").css('visibility','hidden')
    }else{
        $("#add-courseDayPreference-modal .modal-body").css('visibility','visible')
    }
})

        //PAGINATION
        let pageCount = `<%- pageCount %>`
        let pageNos = Math.ceil(Number(pageCount) / 10)
        console.log("Page Numbers", pageNos)
        $('#pagination').bootpag({
            total: pageNos,
            page: 1,
            maxVisible: 10,
            leaps: true,
            firstLastUse: true,
            first: '←',
            last: '→',
            wrapClass: 'pagination',
            activeClass: 'active', 
            disabledClass: 'disabled',
            nextClass: 'next',
            prevClass: 'prev',
            lastClass: 'last',
            firstClass: 'first'
        }).on("page", function (event, num) {
            console.log('pagination here!!')
            $.ajax({
                type: "POST",
                url: "/admin/courseworkload/preference/pagination",
                data: {
                    pageNo: num
                },
                success: function (data) {
                    console.log(data.data)
                    AjaxtTable(data.data) 
                }
            })
        });


        function AjaxtTable(workloadList) {
            let AjaxTable = `<table class="table custom_row table-bordered" id="courseWorkloadTable">
                <thead>
                    <th>Sr No.</th>
                    <th>Program Name</th>
                    <th>Program Abbr</th>
                    <th>Module Name</th>
                    <th>Module Code</th>
                    <th>Division</th>
                    <th>Batch Count</th>
                    <th>Day</th>
                    <th>Acad Session</th>
                    <th>Capacity</th>
                    <th>Room No.</th>
                    <th>Floor No.</th>
                   <!-- <th>Action</th>-->
                </thead>
                <tbody>`;
            if (workloadList.length > 0) {
                let count = 1;
                for (let preference of workloadList) {
                    AjaxTable +=
                        `<tr>
                        <td>${count++}</td>
                        <td>${preference.program_name}</td>
                        <td>${preference.program_abbr}</td>
                        <td>${preference.module_name}</td>
                        <td>${preference.module_code}</td>
                        <td>${preference.division}</td>
                        <td>${preference.batch_count}</td>
                        <td>${preference.day_name}</td>
                        <td>${preference.acad_session}</td>
                        <td>${preference.capacity}</td>
                        <td>${preference.room_number}</td>
                        <td>${preference.floor_number}</td>
                        <!--<td><a><i class="fa fa-edit"></i></a></td>-->
                    </tr>`
                }
            } else {
                AjaxTable +=
                    ` <tr><td colspan="15">No Data Found</td></tr>`;
            }
            AjaxTable += `<tbody></table>`
            $("#courseWorkloadTable").html(AjaxTable);
        }

        $(".refresh_course_day_room_preferences").on('click',function(){
            let apiObj = {
                type:"POST",
                url:"/admin/courseworkload/preference/refresh",
                data: {},
                dataType:"JSON"
            }
            ajaxApi(apiObj).then(result => {
                console.log('result ::::::::::::::::::::::', result)
                showSuccess(result)
            }).catch(error => {
                console.log('Error ::::::::::::::::::::::', error)
                showError(error.responseJSON)
            })
        })



        function showError(errors) {
            console.log(errors);
            let simpleAlert = new SimpleAlert();
            let obj = {
                title : errors.description,
                message: "",
                type: 'alert-success',
                buttons: {
                    positive:{
                        text: "Okay",
                        action: function(){
                            document.querySelector('.simple-alert').remove();
                        }
                    },
                    negative: {
                        text: "Cancel",
                        action: function () {
                        alert('Negative')
                        }
                    }
                }
            }
            simpleAlert.alert(obj);
        }


        function showSuccess(errors) {
            console.log(errors);
            let simpleAlert = new SimpleAlert();
            let obj = {
                title : errors.description,
                message: "",
                type: 'alert-success',
                buttons: {
                    positive:{
                        text: "Okay",
                        action: function(){
                            document.querySelector('.simple-alert').remove();
                        }
                    },
                    negative: {
                        text: "Cancel",
                        action: function () {
                        alert('Negative')
                        }
                    }
                }
            }
            simpleAlert.alert(obj);
        }

    })
</script>
