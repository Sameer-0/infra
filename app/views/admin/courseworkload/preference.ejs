<script src="https://cdn.rawgit.com/botmonster/jquery-bootpag/master/lib/jquery.bootpag.min.js"></script>

<script>
    $(document).ready(function () {

        $('.select2').select2();


        // SEARCH PROGRAM TYPE
         $('#searchkeyword').on('input', delay(function (e) {
            let keyword = $("#searchkeyword").val()
            $.ajax({
                type: "GET",
                url: "/admin/courseworkload/preference/search",
                data: {
                    keyword: keyword
                },
                success: function (data) {
                    AjaxtTable(data.data)
                }
            })
        }, 500));

    //On change function
        let filter={};
       
        $('#program_name').on('input', function() { 
            let program_id = $(this).val();
                filter.program_id = program_id;
                
            let apiObj = {
                type:"POST",
                url:"/admin/courseworkload/preference/acadSessionList",
                data: {
                    program_id: program_id
                },
                dataType:"JSON"
            }

            ajaxApi(apiObj).then(result => {
                let acadList = `<select name="acad_session" id="acad_session" class="form-select">`
                    if(result.data.length > 0){
                        for(let data of result.data){
                        acadList += `<option value="${data.acad_session_lid}"> ${data.acad_session} </option>` 
                        }
                    }
                    else{
                        acadList += `<option> NO SESSION FOUND <option>`
                    }
                    acadList += `</select>`
                   
                    $(this).parent().next().html(acadList);
                console.log('list:::>>>', $(this).next());
            }).catch(error => console.log('error',error));
        })

        $('#add-more-courseDayRoomPreference-table').on('input','#acad_session', function() { 
            let acad_session_lid = $(this).val();
            filter.acad_session_lid = acad_session_lid;
            console.log('acad_Sesi:::>>>>', filter)

            let apiObj = {
                type:"POST",
                url:"/admin/courseworkload/preference/courseList",
                data: filter,
                dataType:"JSON"
            }

            ajaxApi(apiObj).then(result => {
                let courseList = `<select name="course_name" id="course_name" class="form-select">`
                    if(result.data.length > 0){
                        for(let data of result.data){
                        courseList += `<option value="${data.id}"> ${data.module_name} </option>` 
                        }
                    }
                    else{
                        courseList += `<option> NO MODULE FOUND <option>`
                    }
                    courseList += `</select>`
                   
                    $(this).parent().next().html(courseList);
                console.log('Courselist:::>>>', this);
            }).catch(error => console.log('error',error));
        })

        $('#add-more-courseDayRoomPreference-table').on('input','#course_name', function() { 
            let course_lid = $(this).val();
            filter.course_lid = course_lid;
            console.log('acad_Sesi:::>>>>', filter)

            let apiObj = {
                type:"POST",
                url:"/admin/courseworkload/preference/divList",
                data: filter,
                dataType:"JSON"
            }

            ajaxApi(apiObj).then(result => {
                let divList = `<select name="div" id="div" class="form-select">`
                    if(result.data.length > 0){
                        for(let data of result.data){
                            divList += `<option value="${data.division_lid}" data-batch_lid="${data.batch_lid}"> ${data.division} </option>` 
                        }
                    }
                    else{
                        divList += `<option> NO MODULE FOUND <option>`
                    }
                    divList += `</select>`
                   
                    $(this).parent().next().html(divList);
                console.log('Courselist:::>>>', result.data);
            }).catch(error => console.log('error',error));
        })

        //PAGINATION
        let pageCount = `<%- pageCount %>`
        let pageNos = Math.ceil(Number(pageCount) / 10)
        console.log("Page Numbers", pageNos)
        $('#pagination').bootpag({
            total: pageNos,
            page: 1,
            maxVisible: 10,
            leaps: true,
            firstLastUse: true,
            first: '←',
            last: '→',
            wrapClass: 'pagination',
            activeClass: 'active', 
            disabledClass: 'disabled',
            nextClass: 'next',
            prevClass: 'prev',
            lastClass: 'last',
            firstClass: 'first'
        }).on("page", function (event, num) {
            console.log('pagination here!!')
            $.ajax({
                type: "POST",
                url: "/admin/courseworkload/preference/pagination",
                data: {
                    pageNo: num
                },
                success: function (data) {
                    console.log(data.data)
                    AjaxtTable(data.data) 
                }
            })
        });


        function AjaxtTable(workloadList) {
            let AjaxTable = `<table class="table custom_row table-bordered" id="courseWorkloadTable">
                <thead>
                    <th>Sr No.</th>
                    <th>Program Name</th>
                    <th>Abbr</th>
                    <th>Module Name</th>
                    <th>Module Code</th>
                    <th>Division</th>
                    <th>Division Num</th>
                    <th>Batch</th>
                    <th>Batch Count</th>
                    <th>Day</th>
                    <th>Acad Session</th>
                    <th>Capacity</th>
                    <th>Room No</th>
                    <th>Floor No.</th>
                    <th>Action</th>
                </thead>
                <tbody>`;
            if (workloadList.length > 0) {
                let count = 1;
                for (let preference of workloadList) {
                    AjaxTable +=
                        `<tr>
                        <td>${count++}</td>
                        <td>${preference.program_name}</td>
                        <td>${preference.program_abbr}</td>
                        <td>${preference.module_name }</td>
                        <td>${preference.module_code}</td>
                        <td>${preference.division}</td>
                        <td>${preference.division_num}</td>
                        <td>${preference.batch}</td>
                        <td>${preference.batch_count}</td>
                        <td>${preference.day_name}</td>
                        <td>${preference.acad_session}</td>
                        <td>${preference.capacity}</td>
                        <td>${preference.room_number}</td>
                        <td>${preference.floor_number}</td>
                        <td><a><i class="fa fa-edit"></i></a></td>
                    </tr>`
                }
            } else {
                AjaxTable +=
                    ` <tr><td colspan="15">No Data Found</td></tr>`;
            }
            AjaxTable += `<tbody></table>`
            $("#courseWorkloadTable").html(AjaxTable);
        }



        function showError(errors) {
            let errorHtml = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h3>Error</h3>
                    <p>${errors.description}</p>
                    <ul>`
            if (errors.data.length > 0) {
                $(errors.data).each(function (key, value) {
                    $.each(this, function (key, value) {
                        errorHtml +=
                            `<li>${key} ${value}</li>`
                    });
                });
            }
            errorHtml +=
                `</ul> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
                $("#errorHtml").html(errorHtml)
        }


        function showSuccess(errors) {
            let errorHtml = `<div class="alert alert-success alert-dismissible fade show" role="alert">
                    <h3>Success</h3>
                    <p>${errors.description}</p>
                    <ul>`
            if (errors.data.length > 0) {
                $(errors.data).each(function (key, value) {
                    $.each(this, function (key, value) {
                        errorHtml +=
                            `<li>${key} ${value}</li>`
                    });
                });
            }
            errorHtml +=
                `</ul> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
            $("#errorHtml").html(errorHtml)
        }

    })
</script>
