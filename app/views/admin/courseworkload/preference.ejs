                            <td><%- _count++%></td>
                            <td data-program-id="<%- list.program_lid %>"><%- list.program_name %></td>
                            <td data-session-id="<%- list.session_id %>"><%- list.acad_session %></td>
                            <td data-module-id="<%- list.module_id %>"><%- list.module_name %></td>
                            <td data-division-id="<%- list.division_id %>"><%- list.division %></td>
                            <td data-batch-id="<%- list.batch_id %>"><%- list.batch %> ( <%- list.batch_event %>)</td>
                            <td>
                                <select class=" dayName" name="dayName" multiple>
                                    <% /* %>
                                    <%for(let day of dayList){%>
                                    <option value="<%-day.id%>"><%-day.day_name %></option>
                                    <%}%>
                                        <% */ %>
                                    <%if(JSON.parse(list.days).length > 0){%>

                                    <% for(let day of JSON.parse(list.days)) {%>
                                    <option value="<%-day.id%>" selected="selected"><%-day.day_name %></option>
                                    <%}%>

                                        <%}else{%>

                                    <%for(let day of dayList){%>
                                    <option value="<%-day.id%>"><%-day.day_name %></option>
                                    <%}%>

                                        <%}%>
                                </select>
                            </td>
                            <td>
                                <select class=" roomNumber" name="roomNumber" multiple>
                                    <% /* %>
                                    <%for(let room of roomLists){%>
                                    <option value="<%-room.id%>"><%-room.room_number%> (<%-room.room_type%>)</option>
                                    <%}%>
                                            <% */ %>

                                    <% for(let room of JSON.parse(list.rooms)) {%>
                                    <option value="<%-room.id%>" selected="selected"><%-room.room_number%>
                                        (<%-room.room_type_name%>)</option>
                                    <%}%>
                                           
                                        </select>
                                    </td>
                                    <td><a class="btn btn-success add-course-pref-modal" data-batch-id="<%- list.batch_id %>"
                                    data-division-id="<%- list.division_id %>" data-module-id="<%- list.module_id %>"
                                    data-session-id="<%- list.session_id %>"
                                    data-program-id="<%- list.program_lid %>">Add</a></td>
                        </tr>
                        <%}%>
                            </tbody>
                        </table>
                    </div>
            <div class="float-end">
                    <button type="button" class="btn createCoursePreference modal-inputform-btn">CREATE PREFERENCE</button>
            </div>
        </div>
    </div>
</div>

