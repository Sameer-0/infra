                                $("#semesterName").on('change', function () {
                                    let sessionId = $(this).val()
                                    let programId = $('#programName option:selected').attr(
                                        'data-programid')
                                    let apiObj = {
                                        type: "POST",
                                        url: "/admin/courseDayRoomPreference/find-module-by-programid-semesterid",
                                        data: {
