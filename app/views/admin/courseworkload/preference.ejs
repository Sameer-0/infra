                                        let moduleName = ``;
                                        if (result.result.length > 0) {
                                            moduleName +=
                                                `<option value="" disabled>Select Module</option>`;
                                            result.result.forEach(element => {
                                                moduleName +=
                                                    `<option value="${element.id}" >${element.module_name}</option>`;
                                            });
                                        } else {
                                            moduleName +=
                                                `<option value="">Module Not Found!</option>`;
                                        }
                                        $("#moduleName").html(moduleName)
                                        showAjaxTable(result.tabledata)
                                    }).catch(error => {
                                        showError(error.responseJSON)
                                    })
                                })

                                //divisionName
                                $("#moduleName").on('change', function () {
                                    let moduleId = $(this).val()
                                    console.log('moduleId:::::::::>>', moduleId)
                                    let apiObj = {
                                        type: "POST",
                                        url: "/admin/courseDayRoomPreference/find-division-by-moduleid",
                                        data: {
                                            moduleId: moduleId
                                        },
                                        dataType: "JSON"
                                    }
                                    ajaxApi(apiObj).then(result => {
                                        let divisionName = ``;
                                        if (result.result.length > 0) {
                                            divisionName +=
                                                `<option value="" disabled>Select Division</option>`;
                                            result.result.forEach(element => {
                                                divisionName +=
                                                    `<option value="${element.id}" >${element.division}</option>`;
                                            });
                                        } else {
                                            divisionName +=
                                                `<option value="">Division Not Found!</option>`;
                                        }
                                        $("#divisionName").html(divisionName)
                                        showAjaxTable(result.tabledata)
                                    }).catch(error => {
                                        showError(error.responseJSON)
                                    })
                                })


                                // Filter Records
                                $("#divisionName").on('change', function () {
                                    let division_id = $(this).val();
                                    let program_id = $("#programName").val();
                                    let session_id = $("#semesterName").val();
                                    let module_id = $("#moduleName").val();
                                    let apiObj = {
                                        type: "POST",
                                        url: "/admin/courseDayRoomPreference/filter-records",
                                        data: {
                                            division_id: division_id,
                                            program_id: program_id,
                                            session_id: session_id,
                                            module_id: module_id
                                        },
                                        dataType: "JSON"
                                    }
                                    ajaxApi(apiObj).then(result => {
                                        showAjaxTable(result.data)
                                    }).catch(error => {
                                        showError(error.responseJSON)
                                    })
                                })

                                //CREATING JSON FOR COURSE DAY ROOM PREFERENCE
                                $(".createCoursePreference").on('click', function () {
                                    let courseDayList = $(
                                        '#add-more-courseDayRoomPreference-table tbody tr');
                                    let courseDayCount = courseDayList.length;
                                    let courseDayJson = [];

                                    courseDayList.each(function (index, elem) {
                                        let divArray = []
                                        let batchArray = []
                                        let programId = $(elem).find(`td[data-program-id]`)
                                            .attr(`data-program-id`)
                                        let sessionId = $(elem).find(`td[data-session-id]`)
                                            .attr(`data-session-id`)
                                        let moduleId = $(elem).find(`td[data-module-id]`).attr(
                                            `data-module-id`)
                                        divArray.push($(elem).find(`td[data-division-id]`).attr(
                                            `data-division-id`))
                                        batchArray.push($(elem).find(`td[data-batch-id]`).attr(
                                            `data-batch-id`))
                                        let days = $(elem).find(`select[name='dayName']`).val();
                                        let rooms = $(elem).find(`select[name='roomNumber']`)
                                            .val()

                                        if (index < courseDayCount - 1) {
                                            let obj = {
                                                programId: programId,
                                                sessionId: sessionId,
                                                moduleId: moduleId,
                                                divisions: divArray,
                                                batches: batchArray,
                                                days: days,
                                                rooms: rooms
                                            }
                                            courseDayJson.push(obj)
                                        } else {
                                            let obj = {
                                                programId: programId,
                                                sessionId: sessionId,
                                                moduleId: moduleId,
                                                divisions: divArray,
                                                batches: batchArray,
                                                days: days,
                                                rooms: rooms
                                            }
                                            courseDayJson.push(obj)
                                        }
                                    })
                                    console.log('JSON:::::::::::::::::::::>>>>', JSON.stringify(
                                        courseDayJson))


                                    let apiObj = {
                                        type: "POST",
                                        url: "/admin/courseDayRoomPreference/create",
                                        data: {
                                            inputJSON: JSON.stringify(courseDayJson)
                                        },
                                        dataType: "JSON"
                                    }
                                    ajaxApi(apiObj).then(result => {
                                        console.log('result ::::::::::::::::::::::', result)
                                        showSuccess(result)
                                    }).catch(error => {
                                        console.log('Error ::::::::::::::::::::::', error)
                                        showError(error.responseJSON)
                                    })

                                })



                                // SEARCH PROGRAM TYPE
                                $('#searchkeyword').on('input', delay(function (e) {
                                    let keyword = $("#searchkeyword").val()
                                    $.ajax({
                                        type: "POST",
                                        url: "/admin/courseDayRoomPreference/search",
                                        data: {
                                            keyword: keyword
                                        },
                                        success: function (data) {
                                            console.log('response::::::::::::>>', data)
                                            showAjaxTable(data.data)
                                        }
                                    })
                                }, 500));


                                $(".refresh_course_day_room_preferences").on('click', function () {
                                    let apiObj = {
                                        type: "POST",
                                        url: "/admin/courseDayRoomPreference/refresh",
                                        data: {},
                                        dataType: "JSON"
                                    }
                                    ajaxApi(apiObj).then(result => {
                                        console.log('result ::::::::::::::::::::::', result)
                                        showSuccess(result)
                                    }).catch(error => {
                                        console.log('Error ::::::::::::::::::::::', error)
                                        showError(error.responseJSON)
                                    })
                                })


                                function showAjaxTable(preferenecesList) {
                                    let AjaxTable = `<table class="table table-bordered table-bordered" id="add-more-courseDayRoomPreference-table" loading="lazy">
                            <thead>
                                <th>Sr No.</th>
                                <th>Program Name</th>
                                <th>Acad Session</th>
                                <th>Module Name</th>
                                <th>Division</th>
                                <th>Batch</th>
                                <th>Day's <!--Select All <input type="checkbox" id="dayCheck">--></th>
                                <th>Room No <!--Select All <input type="checkbox" id="roomCheck">--></th>
                            </thead>
                            <tbody>`;
                                    if (preferenecesList.length > 0) {
                                        let count = 1;
                                        for (list of preferenecesList) {
                                            AjaxTable +=
                                                `<tr>
