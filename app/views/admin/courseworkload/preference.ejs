                                <th>Module Name</th>
                                <th>Division</th>
                                <th>Batch</th>
                                <th>Day's <!--Select All <input type="checkbox" id="dayCheck">--></th>
                                <th>Room No <!--Select All <input type="checkbox" id="roomCheck">--></th>
                                <th>Action</th>
                            </thead>
                            <tbody>
