                        campus_lid: campus_lid,
                        user_id:username
                    }
                    roomJson.push(obj)
                }
            })

            console.log('roomJson::::::::::::',roomJson)

            let ApiObj = {
                type: 'POST',
                url: '/admin/rooms',
                data: {
                    inputJSON: JSON.stringify(roomJson)
                },
                dataType: 'JSON'
            }

            ajaxApi(ApiObj).then(result => {

                showSuccess(result)
                setTimeout(function(){
