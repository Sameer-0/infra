                let end_date_id = $(elem).find(`select[name='end_date_id']`).val();
                let org_lid = $(elem).find(`select[name='org_lid']`).val();
                let campus_lid = $(elem).find(`select[name='campus_lid']`).val();


                if (index < roomCount - 1) {
                    let obj = {
                        room_lid: room_lid,
                        transaction_type_lid: transaction_type_id,
                        start_time_id: start_time_id,
                        end_time_id: end_time_id,
                        start_date_id: start_date_id,
                        end_date_id: end_date_id,
                        org_lid: org_lid,
                        campus_lid: campus_lid,
                        user_id:username
                    }
                    roomJson.push(obj)
                } else {
                    let obj = {
                        room_lid: room_lid,
                        transaction_type_lid: transaction_type_id,
                        start_time_id: start_time_id,
                        end_time_id: end_time_id,
