    <script src="https://cdn.rawgit.com/botmonster/jquery-bootpag/master/lib/jquery.bootpag.min.js"> </script>
    <script>
        $(document).ready(function () {

            $('[data-bs-toggle="tooltip"]').tooltip()

            $("#room-booked-table").on('click','.room-cancel-request',function(){
                let id =  $(this).attr('data-id')
                console.log('id::::::::::::',id)
                $("#booking-cancel-modal").modal('show')
            })
       





   // SEARCH PROGRAM TYPE
    $('#searchkeyword').on('input', delay(function (e) {
    let keyword = $("#searchkeyword").val()
    $.ajax({
    type: "POST",
    url: "/admin/rooms/search",
    data: {
    keyword: keyword
    },
    success: function (data) {
    AjaxtTable(data.data)
    }
    })
    }, 500));



    //Pagination Here
    let pageCount = `<%- pageCount %>`
    console.log("Page Count=====>>>", pageCount)
    let pageNos = Math.ceil(Number(pageCount) / 10)
    console.log("Page Numbers", pageNos)
    $('#pagination').bootpag({
    total: pageNos,
    page: 1,
    maxVisible: 10,
    leaps: true,
    firstLastUse: true,
    first: '←',
    last: '→',
    wrapClass: 'pagination',
    activeClass: 'active',
    disabledClass: 'disabled',
    nextClass: 'next',
    prevClass: 'prev',
    lastClass: 'last',
    firstClass: 'first'
    }).on("page", function (event, num) {
    $.ajax({
    type: "POST",
    url: "/admin/rooms/pagination",
    data: {
    pageNo: num
    },
    success: function (data) {
    AjaxtTable(data.data)
    }
    })
    });
    

    function AjaxtTable(transactionList){
        let AjaxTable = `<table class="table custom_row table-bordered" id="roomTransactionTable">
                <thead>
                    <th>#</th>
                    <th>Transaction Type</th>
                    <th>Stage</th>
                    <th>Org Name</th>
                    <th>Campus</th>
                    <th>Username</th>
                    <th>Action</th>
                </thead>
                <tbody>`;
                if (transactionList.length > 0) {
                    let count = 1;
                    for (trans of transactionList) {
                        AjaxTable +=
                            `<tr>
                        <td>${count++}</td>
                        <td>${trans.transaction_type}</td>
                        <td>${trans.stage}</td>
                        <td>${trans.org_name}</td>
                        <td>${trans.campus_abbr}</td>
                        <td>${trans.username}</td>
                        <td>
                            <a title="view details" class="viewtransactioninfo" data-id="${trans.id}"><i class="fa fa-eye"></i></a>
                            <a class="delete-transaction" data-id="${trans.id}"><i class="fa fa-trash text-danger"></i></a>
                        </td>
                    </tr>`
                    }
                } else {
                    AjaxTable +=
                        ` <tr>
                                <td colspan="7">No Data Found</td>
                            </tr>`;
                }
                AjaxTable += `<tbody></table>`
                $("#roomTransactionTable").html(AjaxTable);
    }


    function showError(errors) {
        console.log('error::::::::::::::',errors.data.length)
            let errorHtml = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h3>Error</h3>
                    <p>${errors.description}</p>
                    <ul>`
            if (errors.data.length > 0) {
                $(errors.data).each(function (key, value) {
                    $.each(this, function (key, value) {
                        errorHtml +=
                            `<li>${key} ${value}</li>`
                    });
                });
            }
            errorHtml +=
                `</ul> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
                console.log('error::::::::::::::',errorHtml)
                $(".errorHtml").html(errorHtml)
        }


        function showSuccess(errors) {
            let errorHtml = `<div class="alert alert-success alert-dismissible fade show" role="alert">
                    <h3>Success</h3>
                    <p>${errors.description}</p>
                    <ul>`
            if (errors.data.length > 0) {
                $(errors.data).each(function (key, value) {
                    $.each(this, function (key, value) {
                        errorHtml +=
                            `<li>${key} ${value}</li>`
                    });
                });
            }
            errorHtml +=
                `</ul> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
            $(".errorHtml").html(errorHtml)
        }

        
    })

    </script>
