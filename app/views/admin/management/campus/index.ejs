<%- include("../partials/head") %>
<%- include("../partials/leftSidebar") %>
<%- include("../partials/header") %>
<!--Notificaion icon-->
<!--HEADER END-->
<div class="wrapper">
    <div class="main-content">
    <!--DASHBOARD CONTENT START-->
    <div class="card">
        <div class="card-header text-uppercase d-flex align-items-center">
            <h5>Campus List</h5>

            <button class="btn btn-success ms-auto " data-bs-toggle="modal" data-bs-target="#add-campus-modal"><i
                    class="fas fa-plus"></i> Add New</button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
              
                <table class="table table-bordered" id="campusTable">
                    <thead>
                        <th>Campus Id</th>
                        <th>Abbr</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Action</th>
                    </thead>
                    <tbody>
                        <% for (let campus of campusList) { %>
                        <tr>
                            <td><%- campus.campus_id %></td>
                            <td><%- campus.abbr %></td>
                            <td><%- campus.name %></td>
                            <td><%- campus.c_desc %></td>
                            <td>
                                <i class="fas fa-edit text-dark cursor-pointer edit-campus"
                                    data-campus-id="<%- campus.id %>" data-toggle="modal"
                                    data-target="#update-campus-modal"></i>
                                <a data-campus-id="<%- campus.id %>"
                                    class="fas fa-trash-alt text-danger delete-campus"></a>
                            </td>
                        </tr>

                        <% } %>
                    </tbody>
                </table>
      <p id="pagination"></p>
            </div>
            
        </div>
    </div>
    <!--DASHBOARD CONTENT END-->
</div>
</div>


<!-- ADD NEW CAMPUS MODAL -->
<div class="modal fade" id="add-campus-modal" tabindex="-1" role="dialog" aria-labelledby="add-building-modal"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-white" id="add-org-modal-title">Add New Campus</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </button>
            </div>
            <!-- <form action="/management/campus/add" method="POST"> -->
            <div class="modal-body">

                <div class="form-row mt-4">
                    <input name="campusId" id="campusId" type="number" class="form-control" placeholder="Campus Id"
                        required>
                    <input type="hidden" id="Id" name="Id">
                </div>

                <div class="form-row mt-4">
                    <input name="campusAbbr" id="campusAbbr" type="text" class="form-control" placeholder="Campus Abbr"
                        required>
                </div>

                <div class="form-row mt-4">
                    <input name="campusName" id="campusName" type="text" class="form-control" placeholder="Campus Name"
                        required>
                </div>

                <div class="form-row mt-4">
                    <input name="campusDesc" id="campusDesc" type="text" class="form-control"
                        placeholder="Campus Description">
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger createCampus">Create Campus</button>
                <button type="button" class="btn btn-danger updateCampus d-none">Update Campus</button>
            </div>
            <!-- </form> -->
        </div>
    </div>
</div>




<%- include("../partials/footer") %>
<script src="https://cdn.rawgit.com/botmonster/jquery-bootpag/master/lib/jquery.bootpag.min.js"></script>
<script>
    $('.modalSelect2').select2({
        dropdownParent: $('#add-org-modal')
    });

    $('.modalSelect2Update').select2({
        dropdownParent: $('#update-org-modal')
    });


    //management/campus/add
    $('.createCampus').on('click', function () {
        $.ajax({
            url: '/management/campus/add',
            method: 'POST',
            type: 'JSON',
            data: {
                campusId: $("#campusId").val(),
                campusAbbr: $("#campusAbbr").val(),
                campusName: $("#campusName").val(),
                campusDesc: $("#campusDesc").val()
            },
            success: data => {
                console.log('Success: ', data)
                location.reload()
            },
            error: err => {
                console.log('Error: ', err)
            }
        })
    })


    $('#campusTable').on('click', '.edit-campus', function () {
        $(".updateCampus").removeClass('d-none')
        $(".createCampus").addClass('d-none')
        $.ajax({
            url: '/management/campus/fetch-single',
            method: 'POST',
            type: 'JSON',
            data: {
                id: $(this).attr('data-campus-id')
            },
            success: data => {
                let camp = data.result;
                $("#Id").val(camp.id)
                $("#campusId").val(camp.campus_id)
                $("#campusAbbr").val(camp.campus_abbr)
                $("#campusName").val(camp.campus_name_40_char)
                $("#campusDesc").val(camp.campus_description)
                $("#add-campus-modal").modal('show')
            },
            error: err => {
                console.log('Error: ', err)
            }
        })
    })


    $('.updateCampus').on('click', function () {
        $.ajax({
            url: '/management/campus/update',
            method: 'POST',
            type: 'JSON',
            data: {
                Id: $("#Id").val(),
                campusId: $("#campusId").val(),
                campusAbbr: $("#campusAbbr").val(),
                campusName: $("#campusName").val(),
                campusDesc: $("#campusDesc").val()
            },
            success: data => {
                location.reload()
            },
            error: err => {
                console.log('Error: ', err)
            }
        })
    })



    $('#campusTable').on('click', '.delete-campus', function () {
        $(".updateCampus").removeClass('d-none')
        $(".createCampus").addClass('d-none')
        $.ajax({
            url: '/management/campus/delete-single',
            method: 'POST',
            type: 'JSON',
            data: {
                id: $(this).attr('data-campus-id')
            },
            success: data => {
                location.reload()
            },
            error: err => {
                console.log('Error: ', err)
            }
        })
    })

        //Pagination Here
     let pageCount = `<%- pageCount %>`
        console.log("Page Count=====>>>", pageCount)
        let pageNos = Math.ceil(Number(pageCount) / 10)

		console.log("Page Numbers", pageNos)
		$('#pagination').bootpag({
			total: pageNos,
			page: 1,
			maxVisible: 10,
			leaps: true,
			firstLastUse: true,
			first: '←',
			last: '→',
			wrapClass: 'pagination',
			activeClass: 'active',
			disabledClass: 'disabled',
			nextClass: 'next',
			prevClass: 'prev',
			lastClass: 'last',
			firstClass: 'first'
		}).on("page", function (event, num) {

			$.ajax({
				type: "POST",
				url: "/management/campus",
				data: {pageNo: num},
				success: function (data) {
                    let quoteList = data.data;

                    console.log('quoteList-------------->',quoteList)

					let quoteAjax = "";
					for (quote of quoteList) {
						if (islogin !== ""){
                            //Display For LoggedinUser
                            quoteAjax += `<div class="col-md-6 mt-5"><div class="product-box"> <div class="item-content"> <h6 class="item-title"> ${quote.countryname} forwarder seeks agent in ${quote.location} </h6> <p class="card-text">Type: <b>${quote.partnershiptype}</b></p><p class="item-paragraph"> <a href="tel:${quote.mobile}" class="btn btn-success rounded-0 btn-sm"><i class="fas fa-phone"></i></a> <a href="mailto:${quote.email}" class="btn btn-warning rounded-0 btn-sm"><i class="fas fa-envelope"></i></a> </p></div><a class="align-button-down" href="/quote/agent-request?id=${ quote.id}">View</a> </div></div>`
						}
						else {
                            quoteAjax += `<div class="col-md-6 mt-5"><div class="product-box"> <div class="item-content"> <h6 class="item-title"> ${quote.countryname} forwarder seeks agent in ${ quote.location} </h6> <p class="card-text">Type: <b>${quote.partnershiptype}</b></p></div><a class="align-button-down" href="/quote/agent-request?id=${quote.id}">View</a> </div></div>`
						}
					}
					$("#campusTable").html(quoteAjax);
				}
			})
		});




</script>
<%- include("../partials/footerEnd") %>