<div class="col-12 dashboardContent">
    <!--DASHBOARD CONTENT START-->
    <div class="card">
        <div class="card-header text-uppercase">
            <h5>Current Academic Year Details</h5>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <th>Academic Year</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Action</th>
                </thead>
                <tbody>
                    <form action="/management/academic-year" method="POST">
                        <tr>
                            <td>
                                <input class="form-control" type="hidden" value="<%- academicDetails.id %>" name="id"
                                    required>
                                <input class="form-control" type="number" value="<%- academicDetails.input_acad_year %>"
                                    min="2021" max="2099" name="acadYear" required>
                            </td>
                            <td>
                                <input class="form-control" type="text" value="<%- academicDetails.start_date %>"
                                    name="startDate" required>
                            </td>
                            <td>
                                <input class="form-control" type="text" value="<%- academicDetails.end_date %>"
                                    name="endDate" required>
                            </td>
                            <td>
                                <button type="submit" class="btn btn-dark">Update</button>
                            </td>
                        </tr>
                    </form>
                </tbody>
            </table>
        </div>
    </div>
    <!--DASHBOARD CONTENT END-->
</div>
</div>
</div>
<!--DASHBOARD CONTENT END-->
</div>
