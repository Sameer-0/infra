<div class="main-content">

    <!--DASHBOARD CONTENT START-->
    <div class="card table-card">
        <div class="card-header table-card-header text-uppercase d-flex align-items-center justify-content-between">
            <div>
                <h5>Faculty Works</h5>
            </div>
            <div>
                <button type="button" class="btn add-btn ms-auto" data-bs-toggle="modal"
                    data-bs-target="#add-facultywork-modal">
                    <i class="fas fa-plus"></i></button>
                <button class="btn ms-auto select-delete-facultywork add-btn "><i class="fas fa-trash"></i></button>
                <button class="btn ms-auto bulk-delete-facultywork add-btn "><img src="/icons/delete.png" alt=""
                        width="26px" height="32px"></button>
            </div>
        </div>

        <div class="card-body table-responsive">
            <div class="table-searchbar-container"><button type="button"><i class="fas fa-search"></i> </button><input
                    type="search" id="searchkeyword" placeholder="Enter keywords" class="table-searchbar"></div>

            <table class="table custom_row table-bordered" id="facultyWorkTable">
                <thead>
                    <th>Sr.no.</th>
                    <th>Faculty Name</th>
                    <th>Program Name</th>
                    <th>Module Name</th>
                    <th>Lecture Per Week</th>
                    <th>Practical Per Week</th>
                    <th>Tutorial Per Week</th>
                    <th>Workshop Per Week</th>
                    <th>Total Load Per Week</th>
                    <th>Action</th>
                    <th>All <input type="checkbox" class="selectAll-faculty-work"></th>
                </thead>
                <tbody>
                    <% let count = 1 %>
                    <% for (let constraint of facultyWorkList) { %>
                    <tr>
                        <td><%- count++ %></td>
                        <td><%- constraint.tag_id %></td>
                        <td><%- constraint.name %></td>
                        <td><%- constraint.event_type %></td>
                        <td><%- constraint.rule_on %></td>
                        <td><%- constraint.repeatable %></td>
                        <td>
                            <i class="fas fa-edit text-dark cursor-pointer edit-faculty-batch"
                                data-weekly-constraint-id="<%- constraint.id %>"></i>
                        </td>
                        <td>
                            <input type="checkbox" data-weekly-constraint-id="<%- constraint.id %>"
                                class="delete-faculty-work">
                        </td>
                    </tr>

                    <% } %>
                </tbody>
            </table>
            <div class="d-flex justify-content-between">
                <div>
                    <p>Total entries:<%- pageCount %>
                    </p>
                </div>
                <div>
                    <p id="pagination"></p>
                </div>
            </div>
        </div>
    </div>
</div>

