<!-- Modal -->
<div class="modal fade" id="open-transaction-modal" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">ADD ROOM TRANSACTIONS</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="errorHtml"></div>
                <div class="table-responsive ">
                    <table class="table " id="add-more-roomstrans-table">
                        <thead>
                            <th>Room No</th>
                            <th>Transaction Type</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Org Name</th>
                            <th>Campus</th>
                            <th>Action</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <select class="form-control" name="room_lid" id="room_lid">
                                        <option value="">Select Room No</option>
                                        <%for(let room of roomList){%>
                                        <option value="<%-room.id%>"><%- room.room_number %></option>
                                        <%}%>
                                </select>
                                </td>
                                <td>
                                    <select class="form-control" name="transaction_type_id" id="transaction_type_id">
                                        <option value="">Select Transaction Type</option>
                                        <%for(let type of transactionTypes){%>
                                        <option value="<%-type.id%>"><%- type.name %></option>
                                        <%}%>
                                </select>
                                </td>
                            <td>
                                <select class="form-control" name="start_time_id" id="start_time_id">
                                    <option value="">Select Start Time</option>
                                    <%for(let startlist of slotIntervalTimings){%>
                                        <option value="<%-startlist.id%>"><%- startlist.start_time %></option>
                                        <%}%>
                            </select>
                            </td>
                            <td>
                                <select class="form-control" name="end_time_id" id="end_time_id">
                                    <option value="">Select End Time</option>
                                    <%for(let endlist of slotIntervalTimings){%>
                                        <option value="<%-endlist.id%>"><%- endlist.end_time %></option>
                                        <%}%>
                            </select>
                            </td>
                            <td>
                                <select class="form-control" name="start_date_id" id="start_date_id">
                                    <option value="">Select Start Date</option>
                                    <%for(let startdate of academicCalender){%>
                                        <option value="<%-startdate.id%>"><%- startdate.date %></option>
                                        <%}%>
                            </select>
                            </td>
                            <td>
                                <select class="form-control" name="end_date_id" id="end_date_id">
                                    <option value="">Select End Date</option>
                                    <%for(let enddate of academicCalender){%>
                                        <option value="<%-enddate.id%>"><%- enddate.date %></option>
                                        <%}%>
                            </select>
                            </td>
                            <td><select class="form-control" name="org_lid" id="org_lid"> 
                                <option value="">Select orgnization</option>
                                <%for(let org of orgnizations){%>
                                        <option value="<%-org.id%>"><%- org.org_abbr %></option>
                                        <%}%>
                        </select></td>
                            <td>
                                <select class="form-control" name="campus_lid" id="campus_lid"> 
                                    <option value="">Select Campus</option>
                                    <%for(let campus of campuses){%>
                                        <option value="<%-campus.id%>"><%- campus.campus_abbr %></option>
                                        <%}%>
                            </select>
                            </td>

                            <td>
                                <i class="far fa-edit d-none"></i>
                                <i class="fas fa-trash-alt text-danger cursor-pointer remove-roomtransaction"></i>
                            </td>
                        </tr>
                    </tbody>
                    
                </table>
            </div>
        </div>
        <div class="modal-footer">
            <div id="errorMsg"></div>
            <button type="button" class="btn btn-success  btn-sm" id="add-more-roomtransaction"><i
                    class="fas fa-plus"></i>
                Add
                More Fields</button>
            <button type="submit" class="btn  createRoomTransaction modal-inputform-btn">Create</button>
            <button type="submit" class="btn  updateRoomTransaction modal-inputform-btn d-none">Update
                </button>
        </div>
      </div>
    </div>
  </div>



