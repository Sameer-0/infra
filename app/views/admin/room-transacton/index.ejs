            <table class="table custom_row" id="roomTransactionTable">
                <thead>
                    <th>#</th>
                    <th>Transaction Type</th>
                    <th>Stage</th>
                    <th>Org Name</th>
                    <th>Campus</th>
                    <th>Username</th>
                    <th>Action</th>
                </thead>
                <tbody>
                    <%let count = 1;%>
                    <% for(let trans of transactionList) {%>
                    <tr>
                        <td><%- count++ %></td>
                        <td><%- trans.transaction_type %></td>
                        <td><%- trans.stage %></td>
                        <td><%- trans.org_name %></td>
                        <td><%- trans.campus_abbr %></td>
                        <td><%- trans.username %></td>
                        <td><a data-id="<%- trans.id %>"><i class="fa fa-edit"></i></a>
                            <a title="view details" data-id="<%- trans.id %>"><i class="fa fa-eye"></i></a>
                        </td>
                    </tr>
                    <%}%>
                </tbody>
            </table>
            <div class="d-flex justify-content-between">
                <div>
                    <p>Total entries: <%- pageCount %> </p>
        </div>
        <div>
            <p id="pagination"></p>
        </div>
    </div>
</div>
</div>
