    <script>
        $(document).ready(function () {
            let username = `<%- locals.userid %>`;
    console.log('Username:::::::::::::::::::', username)
    //Add more rows for building
    $('#add-more-roomtransaction').on('click', function () {
    console.log("Organization Added::::")
    let lastTr = $('#add-more-roomstrans-table tbody tr:last-child')
    let room_lid = lastTr.find(`select[name='room_lid']`).val();
    let transaction_type_id = lastTr.find(`select[name='transaction_type_id']`).val();
    let start_time_id = lastTr.find(`select[name='start_time_id']`).val();
    let end_time_id = lastTr.find(`select[name='end_time_id']`).val();
    let start_date_id = lastTr.find(`select[name='start_date_id']`).val();
    let end_date_id = lastTr.find(`select[name='end_date_id']`).val();
    let org_lid = lastTr.find(`select[name='org_lid']`).val();
    let campus_lid = lastTr.find(`select[name='campus_lid']`).val();
    let clonedTr = lastTr.clone();
    console.log('room_lid::::::::::::>>',room_lid)
    clonedTr.find(`select[name='room_lid']`).val(room_lid).trigger('chnage')
    clonedTr.find(`select[name='transaction_type_id']`).val(transaction_type_id).trigger('chnage')
    clonedTr.find(`select[name='start_time_id']`).val(start_time_id).trigger('chnage')
    clonedTr.find(`select[name='end_time_id']`).val(end_time_id).trigger('chnage')
    clonedTr.find(`select[name='start_date_id']`).val(start_date_id).trigger('chnage')
    clonedTr.find(`select[name='end_date_id']`).val(end_date_id).trigger('chnage')
    clonedTr.find(`select[name='org_lid']`).val(org_lid).trigger('chnage')
    clonedTr.find(`select[name='campus_lid']`).val(campus_lid).trigger('chnage')
    $('#add-more-roomstrans-table tbody').append(
    clonedTr)
    })


    $('#add-more-roomstrans-table').on('click', '.remove-roomtransaction',
    function () {
    let trLength = $(
    '#add-more-roomstrans-table tbody tr')
    .length;
    if (trLength > 1) {
    $(this).closest('tr').remove()
    } else {
    alert('Cannot delete this room.')
    }
    })




  //Create
    $(".createRoomTransaction").on('click', function () {
            let roomElems = $('#add-more-roomstrans-table tbody tr');
            let roomCount = roomElems.length;
            let roomJson = [];
            roomElems.each(function (index, elem) {
                let room_lid = $(elem).find(`select[name='room_lid']`).val()
                let transaction_type_id = $(elem).find(`select[name='transaction_type_id']`).val();
                let start_time_id = $(elem).find(`select[name='start_time_id']`).val();
                let end_time_id = $(elem).find(`select[name='end_time_id']`).val();
                let start_date_id = $(elem).find(`select[name='start_date_id']`).val();
                let end_date_id = $(elem).find(`select[name='end_date_id']`).val();
                let org_lid = $(elem).find(`select[name='org_lid']`).val();
                let campus_lid = $(elem).find(`select[name='campus_lid']`).val();


                if (index < roomCount - 1) {
                    let obj = {
                        room_lid: room_lid,
                        transaction_type_id: transaction_type_id,
                        start_time_id: start_time_id,
                        end_time_id: end_time_id,
                        start_date_id: start_date_id,
                        end_date_id: end_date_id,
                        org_lid: org_lid,
                        campus_lid: campus_lid,
                        user_id:username
                    }
                    roomJson.push(obj)
                } else {
                    let obj = {
                        room_lid: room_lid,
                        transaction_type_id: transaction_type_id,
                        start_time_id: start_time_id,
                        end_time_id: end_time_id,
                        start_date_id: start_date_id,
                        end_date_id: end_date_id,
                        org_lid: org_lid,
                        campus_lid: campus_lid,
                        user_id:username
                    }
                    roomJson.push(obj)
                }
            })
            console.log('roomJson:::::::::',roomJson)
            let ApiObj = {
                type: 'POST',
                url: '/admin/room-transactions',
                data: {
                    inputJSON: JSON.stringify(roomJson)
                },
                dataType: 'JSON'
            }

            ajaxApi(ApiObj).then(result => {
               // location.reload()
            }).catch(error => {
                showError(error.responseJSON)
            })

        })








  
    $('#roomTransactionTable').on('change', '.changeStatus',
    function () {
    //console.log($(this).attr('data-id'))
    //console.log($(this).attr('data-status'))
    if ($(this).is(':checked')) {
    //console.log('Yes')
    chnageStatus($(this).attr('data-id'), 1)
    } else {
    //console.log('No')
    chnageStatus($(this).attr('data-id'), 0)
    }
    })




    function chnageStatus(id, status) {
    console.log(id, status)
    let ApiObj = {
    url: '/admin/room-transactions/changestatus',
    type: 'POST',
    data: {
    id: id,
    status: status
    },
    dataType: 'JSON'
    }
    ajaxApi(ApiObj).then(result => {
    loadAll()
    }).catch(error => {
    })}


    function loadAll() {
    let ApiObj = {
    url: '/admin/room-transactions/getAll',
    type: 'GET',
    data: {},
    dataType: 'JSON'
    }
    ajaxApi(ApiObj).then(result => {
    AjaxTable(result.result)
    }).catch(error => {
    })
    }


    // SEARCH PROGRAM TYPE
    $('#searchkeyword').on('input', delay(function (e) {
    let keyword = $("#searchkeyword").val()
    $.ajax({
    type: "GET",
    url: "/admin/room-transactions/search",
    data: {
    keyword: keyword
    },
    success: function (data) {
    AjaxtTable(data.data)
    }
    })
    }, 500));



    //Pagination Here
    let pageCount = `<%- pageCount %>`
    console.log("Page Count=====>>>", pageCount)
    let pageNos = Math.ceil(Number(pageCount) / 10)
    console.log("Page Numbers", pageNos)
    $('#pagination').bootpag({
    total: pageNos,
    page: 1,
    maxVisible: 10,
    leaps: true,
    firstLastUse: true,
    first: '←',
    last: '→',
    wrapClass: 'pagination',
    activeClass: 'active',
    disabledClass: 'disabled',
    nextClass: 'next',
    prevClass: 'prev',
    lastClass: 'last',
    firstClass: 'first'
    }).on("page", function (event, num) {
    $.ajax({
    type: "POST",
    url: "/admin/room-transactions/pagination",
    data: {
    pageNo: num
    },
    success: function (data) {
    AjaxtTable(data.data)
    }
    })
    });
    function AjaxtTable(divisionList) {
    let AjaxTable = `<table class="table custom_row" id="roomTransactionTable">
        <thead>
            <th>#</th>
            <th>Transaction Type</th>
            <th>Stage</th>
            <th>Org Name</th>
            <th>Campus</th>
            <th>Username</th>
            <th>Action</th>
        </thead>`;
        if (divisionList.length > 0) {
        let count = 1;
        for (let trans of divisionList) {
        AjaxTable +=
        `<tr>
            <td>${count++}</td>
            <td>${trans.transaction_type}</td>
            <td>${trans.stage}</td>
            <td>${trans.org_name}</td>
            <td>${trans.campus_abbr}</td>
            <td>${trans.username}</td>
            <td><a data-id="${trans.id}"><i class="fa fa-edit"></i></a></td>
        </tr>`
        }
        } else {
        AjaxTable +=
        ` <tr>
            <td colspan="7">No Data Found</td>
        </tr>`;
        }
        AjaxTable += `<tbody>
    </table>`
    $("#roomTransactionTable").html(AjaxTable);
    }



    function showError(errors) {
            let errorHtml = `<div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <h3>Error</h3>
                    <p>${errors.description}</p>
                    <ul>`
            if (errors.data.length > 0) {
                $(errors.data).each(function (key, value) {
                    $.each(this, function (key, value) {
                        errorHtml +=
                            `<li>${key} ${value}</li>`
                    });
                });
            }
            errorHtml +=
                `</ul> <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button> </div>`
            $("#errorHtml").html(errorHtml)
        }




    })
    </script>
