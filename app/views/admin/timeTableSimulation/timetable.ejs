                                    event.preventDefault();  
                                    event.stopPropagation();
                                    // $(this).removeClass('dragging');
                                    // console.log('dragleave', this)
                                });

                                $(".timetable-simulation").on("drop",'.draggableTd', function(event) {

                                    $(this).css({'background':'#5ecf73',
                                                  'color' : '#fff'  })
                                                  
                                    event.preventDefault();  
                                    event.stopPropagation();
                                    targetTd = $(this);
                                    targetTdLid = $(this).attr('data-lid');

                                    dragContent = `${dragTd.attr('data-module-name')} <br> ${dragTd.attr('data-division-name')} (${dragTd.attr('data-batch-name')}) <br> ${dragTd.attr('data-session-name')} <br> ${dragTd.attr('data-program-name')} <br> ${$(this).attr('data-start-time')} to ${$(this).attr('data-end-time')} <br> (${dragTd.attr('data-faculty-name')})`

                                    targetContent = `${$(this).attr('data-module-name')} <br> ${$(this).attr('data-division-name')} (${$(this).attr('data-batch-name')}) <br> ${$(this).attr('data-session-name')} <br> ${$(this).attr('data-program-name')} <br> ${dragTd.attr('data-start-time')} to ${dragTd.attr('data-end-time')} <br> (${$(this).attr('data-faculty-name')})`

                                    console.log('dragstart:::', dragContent)
                                    
                                    console.log('dropppp:::', targetContent)
                                    
                                    let obj = [{"event_booking_lid": dragTdLid }, {"event_booking_lid": targetTdLid}]
                                                

                                    console.log('JSON::::::::::::::::', obj)

                                    let ApiObj = {
                                        url: '/admin/time-table-simulation/time-table/swap-events',
                                        type: 'POST',
                                        data: {
                                            inputJSON: JSON.stringify(obj)
                                        },
                                        dataType: 'JSON'
                                    }
                                    console.log('target',targetContent)
                                    console.log('dragTd',dragContent)
                                    ajaxApi(ApiObj)
                                    .then((result) => {
                                        targetTd.html(dragContent);
                                        dragTd.html(targetContent);
                                        // showSuccess(result);
                                    
                                    })
                                    .catch(err => {console.log('err', err)
                                        showError(err.responseJSON);
                                })


                                });
                                }



                                function showError(errors) {
                                    console.log('error::::::::::', errors)
                                    let simpleAlert = new SimpleAlert();
                                    let obj = {
                                        title: errors.description,
                                        message: errors.data,
                                        type: 'alert-danger',
                                        buttons: {
                                            positive: {
                                                text: "Okay",
                                                action: function () {
                                                    document.querySelector('.simple-alert').remove();
                                                }
                                            },
                                            negative: {
                                                text: "Cancel",
                                                action: function () {
                                                    alert('Negative')
                                                }
                                            }
                                        }
                                    }
                                    simpleAlert.alert(obj);
                                }


                                function showSuccess(errors) {
                                    console.log('error::::::::::', errors)
                                    let simpleAlert = new SimpleAlert();
                                    let obj = {
                                        title: errors.description,
                                        message: errors.data,
                                        type: 'alert-success',
                                        buttons: {
                                            positive: {
                                                text: "Okay",
                                                action: function () {
                                                    document.querySelector('.simple-alert').remove();
                                                }
                                            },
                                            negative: {
                                                text: "Cancel",
                                                action: function () {
                                                    alert('Negative')
                                                }
                                            }
                                        }
                                    }
                                    simpleAlert.alert(obj);
                                }

                            })
                        </script>
