                        <script>
                            $(document).ready(function () {
                                let currentTd;
                                let roomList = JSON.parse(`<%- roomList %>`);
                                let programListJson = JSON.parse(`<%- programListJson %>`);

                                //DRAG EVENT
                                initDrag()
                                //Getting session List Ajax
