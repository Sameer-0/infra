                                $(document).on('change', '#program-name-modal', function () {

                                    let programLid = $(this).val();

                                    let ApiObj = {
                                        url: '/admin/programs/sessions/program-sessions',
                                        type: 'POST',
                                        data: {
                                            programLid: programLid
                                        },
                                        dataType: 'JSON'
                                    }
