<script src="https://cdn.rawgit.com/botmonster/jquery-bootpag/master/lib/jquery.bootpag.min.js"></script>
<script>
    $(document).ready(function () {

        // SEARCH
        $('#searchkeyword').on('input', delay(function (e) {
            let keyword = $("#searchkeyword").val()
            $.ajax({
                type: "GET",
                url: "/admin/programs/sessions/search",
                data: {
                    keyword: keyword
                },
                success: function (data) {
                    AjaxtTable(data.data)
                }
            })
        }, 500));



        //Pagination Here
        let pageCount = `<%- pageCount %>`
        console.log("Page Count=====>>>", pageCount)
        let pageNos = Math.ceil(Number(pageCount) / 10)

        console.log("Page Numbers", pageNos)
        $('#pagination').bootpag({
            total: pageNos,
            page: 1,
            maxVisible: 10,
            leaps: true,
            firstLastUse: true,
            first: '←',
            last: '→',
            wrapClass: 'pagination',
            activeClass: 'active',
            disabledClass: 'disabled',
            nextClass: 'next',
            prevClass: 'prev',
            lastClass: 'last',
            firstClass: 'first'
        }).on("page", function (event, num) {
            $.ajax({
                type: "POST",
                url: "/admin/programs/sessions/pagination",
                data: {
                    pageNo: num
                },
                success: function (data) {
                    AjaxtTable(data.data)
                }
            })
        });



        function AjaxtTable(programTypeList) {
            let AjaxTable = `<table class="table custom_row" id="programTypeTable">
                <thead>
                    <th>Sr No.</th>
                    <th>Program Id</th>
                    <th>Acad Session</th>
                </thead>`;
            if (programTypeList.length > 0) {
                let count = 1;
                for (let day of programTypeList) {
                    AjaxTable +=
                        `<tr>
                        <td>${count++}</td>
                        <td>${day.program_name}</td>
                        <td>${day.acad_session}</td>
                    </tr>`
                }
            } else {
                AjaxTable +=
                    ` <tr>
                                <td colspan="3">No Data Found</td>
                            </tr>`;
            }
            AjaxTable += `<tbody></table>`
            $("#programTypeTable").html(AjaxTable);
        }

    })
</script>
