<%- include("../partials/head") %>
<%- include("../partials/leftSidebar") %>
<%- include("../partials/header") %>

<div class="col-12 dashboardContent">
                    <!--DASHBOARD CONTENT START-->
                    <div class="card">
                        <div class="card-header">
                            <h1 class="f-20">Acad Session Division List</h1>
                        </div>
                        <div class="card-body">
                            <div class="col-12 table-responsive mt-3">
                                
                                <table id="addProgramNameTable" class="table table-bordered table-striped call-datatable">
                                    <thead>
                                        <tr>
                                            <th cust-name="programId">Program ID</th>
                                            <th cust-name="programName">Program Name</th>
                                            <th cust-name="programCode">Program Code</th>
                                            <th cust-name="campusId">Campus ID</th>
                                            <th cust-name="campusLocation">Campus Location</th>
                                            <th cust-name="schoolId">School ID</th>
                                            <th cust-name="acadYear">Acad Year</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% data.forEach((value) => { %>
                                        <tr>
                                            <td><%- value.programId %></td>
                                            <td>
                                                <span><%- value.programName %></span>
                                                <textarea class="form-control d-none" placeholder="Enter Program ID"><%- value.programName %></textarea>
                                            </td>
                                            <td>
                                                    <span><%- value.programCode %></span>
                                                <textarea class="form-control d-none" placeholder="Enter Program Name"><%- value.programCode %></textarea>
                                            </td>
                                            <td><%- value.campusId %></td>
                                            <td>
                                                    <span><%- value.campusLocation %></span>
                                                <textarea class="form-control d-none" placeholder="Enter Campus Location"><%- value.campusLocation %></textarea>
                                            </td>
                                            <td>
                                                    <span><%- value.schoolId %></span>
                                                <textarea class="form-control d-none" placeholder="Enter School ID"><%- value.schoolId %></textarea>
                                            </td>
                                            <td>
                                                    <span><%- value.acadYear %></span>
                                                <input type="number" value="<%- value.acadYear %>" class="form-control mw-160 d-none" placeholder="Enter Acad Year"/>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                    <tfoot>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tfoot>
                                </table>
                            </div>
                            <div class="col-12 text-center">
                            <button class="btn btn-dark editAllBtn" id="editProgramId">Edit</button>
                            <button class="btn btn-success" id="addProgramNameBtn">Submit All</button>
                            </div>
                        </div>
                    </div>

                    <!--DASHBOARD CONTENT END-->

<%- include("../partials/footer") %>

<script>
		$(document).ready(function(){
			$('#addProgramNameTable tbody td span').each(function(){
				if($(this).html() == "") {
                     $(this).html('Enter Data')
				}
            })
            
            $('.editAllBtn').click(function(){
                $(this).parent().parent().find('table tbody td span').hide()
                $(this).parent().parent().find('table tbody td textarea, table tbody td input').removeClass('d-none')
            })
		})
	</script>
<%- include("../partials/footerEnd") %>


