            </div>
        </div>

        <div class="card-body table-responsive">
            <div class="table-searchbar-container"><button type="button"><i class="fas fa-search"></i> </button><input
                    type="search" id="searchkeyword" placeholder="Enter keywords" class="table-searchbar"></div>

            <table class="table custom_row table-bordered" id="programTable">
                <thead>
                    <th>#</th>
                    <th>Program Id</th>
                    <th>Program Name</th>
                    <th>Program Type</th>
                    <th>Abbr</th>
                </thead>
                <tbody>
                    <% let count = 1 %>
                    <%for(let program of programList) {%>
                    <tr>
                        <td><%- count++ %></td>
                        <td><%-program.program_id %></td>
                        <td><%-program.program_name %></td>
                        <td><%-program.program_type %></td>
                        <td><%-program.abbr %></td>
                    </tr>
                    <%}%>
                </tbody>
            </table>
            <div class="d-flex justify-content-between">
                <div>
                    <p>Total entries:<%- pageCount %>
                    </p>
        </div>
        <div>
            <p id="pagination"></p>
        </div>
    </div>
</div>
</div>


</div>

<%- include("../partials/footer") %>
<script src="https://cdn.rawgit.com/botmonster/jquery-bootpag/master/lib/jquery.bootpag.min.js">
</script>

<script>
    $(document).ready(function () {

        // SEARCH PROGRAM TYPE

        $('#searchkeyword').on('input', delay(function (e) {
            let keyword = $("#searchkeyword").val()
            $.ajax({
                type: "GET",
                url: "/admin/programs/search",
                data: {
                    keyword: keyword
                },
                success: function (data) {
                    console.log(data)
                    AjaxtTable(data.data)
                }
            })
        }, 500));



        //Pagination Here
        let pageCount = `<%- pageCount %>`
        console.log("Page Count=====>>>", pageCount)
        let pageNos = Math.ceil(Number(pageCount) / 10)

        console.log("Page Numbers", pageNos)
        $('#pagination').bootpag({
            total: pageNos,
            page: 1,
            maxVisible: 10,
            leaps: true,
            firstLastUse: true,
            first: '←',
            last: '→',
            wrapClass: 'pagination',
            activeClass: 'active',
            disabledClass: 'disabled',
            nextClass: 'next',
            prevClass: 'prev',
            lastClass: 'last',
            firstClass: 'first'
        }).on("page", function (event, num) {
            $.ajax({
                type: "POST",
                url: "/admin/programs/pagination",
                data: {
                    pageNo: num
                },
                success: function (data) {
                    AjaxtTable(data.data)
                }
            })
        });


        function AjaxtTable(programTypeList) {
            console.log('programTypeList::::::::::::', programTypeList)
            let AjaxTable = `<table class="table custom_row table-bordered" id="programTable">
                <thead>
                    <th>#</th>
                    <th>Program Id</th>
                    <th>Program Name</th>
                    <th>Program Type</th>
                    <th>Abbr</th>
                </thead>`;
            if (programTypeList.length > 0) {
                let count = 1;
                for (let program of programTypeList) {
                    AjaxTable +=
                        `<td>${count++}</td>
                        <td>${program.program_id}</td>
                        <td>${program.program_name}</td>
                        <td>${program.program_type}</td>
                        <td>${program.abbr}</td>`
                }
            } else {
                AjaxTable +=
                    ` <tr>
                                <td colspan="5">No Data Found</td>
                            </tr>`;
            }
            AjaxTable += `<tbody></table>`
            $("#programTable").html(AjaxTable);
        }


    })
</script>
