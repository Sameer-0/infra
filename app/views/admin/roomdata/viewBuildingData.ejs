                        <label class="font-weight-bold">End Time: <span class="text-danger">*</span></label>
                        <input class='text-center form-control' type="time" id="endTime" name="endTime" value="<%- buildingData.end_time %>">
                    </div>
                    <div class="col-sm-4 mb-3">
                        <label class="font-weight-bold">Campus: <span class="text-danger">*</span></label>
                        <select id="campusId" class="form-control">
                            <option selected disabled>--Select Campus--</option>
                        </select>
