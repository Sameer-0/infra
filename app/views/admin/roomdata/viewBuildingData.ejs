<script>
    function callDatatable() {
        if ($('.call-datatable').length > 0) {
            //CALL DATATABLE

            $('.call-datatable').DataTable({
                autoFill: false,
                //scrollY: 400,
                scrollX: '100%',
                deferRender: true,
                scrollY: true,
                scrollX: true,
                paging: true,
                initComplete: function () {
                    this.api().columns().every(function () {
                        var column = this;
                        var select = $(
                                '<select><option value="">-Select-</option></select>'
                            )
                            .appendTo($(column.footer()).empty())
                            .on('change', function () {
                                var val = $.fn.dataTable.util.escapeRegex(
                                    $(this).val()
                                );

                                column
                                    .search(val ? '^' + val + '$' : '',
                                        true, false)
                                    .draw();
                            });

                        column.data().unique().sort().each(function (d, j) {
                            select.append('<option value="' + d +
                                '">' + d + '</option>')
                        });
                    });
                }
            })
            //CALL DATATABLE END
        }
    }
    callDatatable();
    $('#addBuildingDataModal').on('hidden.bs.modal', function (e) {
        $('#addBuildingDataTitle').html("Add New Building");
        $("#buildingName").val("");
        $("#buildingNumber").val("");
        $("#totalFloors").val("");
        $("#ownerId").val("");
        $("#handledBy").val("");
        $("#startTime").val("");
        $("#endTime").val("");
        $("#campusId").val("");
        window.location.reload();
    })
    $('#addBuildingData').on('click', function(){
        console.log("show");
        $('#addBuildingDataModal').modal('show');
        $('#addBuildingDataTitle').html("Add New Building");
        $("#buildingName").val("");
        $("#buildingNumber").val("");
        $("#totalFloors").val("");
        $("#ownerId").val("");
        $("#handledBy").val("");
        $("#startTime").val("");
        $("#endTime").val("");
        $("#campusId").val("");
        getCampusList("");
    });
    $('.editBuildingData').on('click', function(){
        let modalId = $(this).attr("id");
        $('#addBuildingDataModal').modal('show');
        $('#addBuildingDataTitle').html("Edit Building Data");
        $("#buildingId").val($("#"+modalId).attr("data-id"))
        $("#buildingName").val($("#"+modalId).attr("data-buildingName"));
        $("#buildingNumber").val($("#"+modalId).attr("data-buildingNumber"));
        $("#totalFloors").val($("#"+modalId).attr("data-totalFloors"));
        $("#ownerId").val($("#"+modalId).attr("data-ownerId"));
        $("#handledBy").val($("#"+modalId).attr("data-handledBy"));
        $("#startTime").val($("#"+modalId).attr("data-startTime"));
        $("#endTime").val($("#"+modalId).attr("data-endTime"));
        let campusId = $("#"+modalId).attr("data-campusId");
        getCampusList(campusId);
    });
    $('#addBuildingDataSubmit').on('click', function(){
        let buildingName = $("#buildingName").val();
        let buildingNumber = $("#buildingNumber").val();
        let totalFloors = $("#totalFloors").val();
        let ownerId = $("#ownerId").val();
        let handledBy = $("#handledBy").val();
        let startTime = $("#startTime").val();
        let endTime = $("#endTime").val();
        let campusId = $('#campusId').val();
        let id = $('#buildingId').val();
        $.ajax({
        type: "POST",
        url: "/roomdata/addBuildingData",
        dataType: "JSON",
        data: {
            buildingName: buildingName,
            buildingNumber: buildingNumber,
            totalFloors: totalFloors,
            ownerId: ownerId,
            handledBy: handledBy,
            startTime: startTime,
            endTime: endTime,
            campusId: campusId,
            id: id
        },
        success: function (data) {
          if (data.cause == "permission denied") {
                window.location = data.reqUrl
                return
            }
            if(data.data == "Added"){
                // alert("Building Added Successfully.");
                $(".alertBody").removeClass('d-none').find(".alert-text").html("Building Data Added Successfully.");
                window.location.reload();
            }
            if(data.data == "Not Added"){
                $(".alertBody").removeClass('d-none').find(".alert-text").html("Same building and building number already added or something went wrong while adding building.");
            }
            if(data.data == "Updated"){
                $(".alertBody").removeClass('d-none').find(".alert-text").html("Building Data Updated Successfully.");
            }
            if(data.data == "Not Updated"){
                $(".alertBody").removeClass('d-none').find(".alert-text").html("Something went wrong while updating building data.");
            }
        }
      });
    });
    
    function getCampusList(campusId) {
        console.log(campusId)
    $.ajax({
            url: "/roomdata/getCampusList",
            type: "POST",
            data:{},
            success: data => {
                let campusOptions ="";
                if(campusId==""){
                    campusOptions += `<option selected disabled value="">--Select Campus--</option>`;
                }
                if(campusId==0){
                    campusOptions += `<option selected disabled value="">--Select Campus--</option>`;
                }
                for(let campus of data.campusList){
                    if(campusId == campus.campus_id){
                        campusOptions += `<option selected value="${campus.campus_id}">${campus.campus_abbr}</option>`;
                    }else{
                        campusOptions += `<option value="${campus.campus_id}">${campus.campus_abbr}</option>`;
                    }
                }
                $('#campusId').html(campusOptions);
            },
            error: error => {
                console.log("Error: ", error)
            }
        })
    }
</script>
