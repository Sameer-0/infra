                    <!-- <div  class="col-sm-12 "><p class="alert-text"></p></div> -->
                    <input type="hidden" id="buildingId" value="<%- buildingData.id %>">
                    <div class="col-sm-6 mb-3">
                        <label class="font-weight-bold">Building Name: <span class="text-danger">*</span></label>
